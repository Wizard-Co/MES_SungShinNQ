<UserControl x:Class="WizMes_SungShinNQ.Win_prd_PlanInputArticleView_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_SungShinNQ"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!--상하 레이아웃 나누기-->
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>

        <!--상단 레이아웃-->
        <!--상단 레이아웃 배경-->
        <Grid Grid.Row="0" Margin="2" Background="{DynamicResource WizMes_SungShinNQ}" >
            <!--행추가-->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--열추가-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="130*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>

            <!--지시일자-->
            <Grid Grid.Column="1" Grid.Row="0" x:Name="grdSrh1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblDateSrh" Grid.Column="0" Margin="1" VerticalContentAlignment="Center" 
                       MouseLeftButtonUp="lblDateSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkDateSrh" Checked="chkDateSrh_Checked" 
                                      Unchecked="chkDateSrh_Unchecked" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text=" 지시 일자" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpSDate" Grid.Column="1" Margin="1" IsEnabled="False"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="dtpEDate" Grid.Column="1" Margin="1" IsEnabled="False"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="42*" />
                    <ColumnDefinition Width="42*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnThisMonth" Grid.Column="1" Margin="1" Content="금월" 
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                        Click="btnThisMonth_Click"/>
                <Button x:Name="btnToday" Grid.Column="2" Margin="1" Content="금일" 
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                        Click="btnToday_Click"/>
            </Grid>

            <!--품명-->
            <Grid Grid.Column="2" Grid.Row="0" x:Name="grdSrh2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticleSrh" Grid.Column="0" Margin="1" VerticalContentAlignment="Center" 
                       MouseLeftButtonUp="lblArticleSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkArticleSrh" Checked="chkArticleSrh_Checked" 
                                      Unchecked="chkArticleSrh_Unchecked" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text=" 품  명" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtArticleSrh" Grid.Column="1" Margin="1" IsEnabled="False" 
                         KeyDown="txtArticleSrh_KeyDown"/>
                <Button x:Name="btnPfArticleSrh" Grid.Column="2" Margin="1" IsEnabled="False" 
                        Click="btnPfArticleSrh_Click">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <!--거래처-->
            <Grid Grid.Column="2" Grid.Row="1" x:Name="grdSrh3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblCustomSrh" Grid.Column="0" Margin="1" VerticalContentAlignment="Center" 
                       MouseLeftButtonUp="lblCustomSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkCustomSrh" Checked="chkCustomSrh_Checked" 
                                      Unchecked="chkCustomSrh_Unchecked" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text=" 거래처" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtCustomSrh" Grid.Column="1" Margin="1" 
                         IsEnabled="False" KeyDown="txtCustomSrh_KeyDown"/>
                <Button x:Name="btnPfCustomSrh" Grid.Column="2" Margin="1" 
                        IsEnabled="False" Click="btnPfCustomSrh_Click">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <!--우측 상단 버튼-->
            <Grid Grid.Column="4" Grid.RowSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnSearch" Grid.Column="1" Margin="1" Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnUpdate" Grid.Column="2" Margin="1" Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnClose" Grid.Column="3" Margin="1" Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnSave" Grid.Column="1" Margin="1" Click="btnSave_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnCancel" Grid.Column="2" Margin="1" Click="btnCancel_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnExcel" Grid.Column="3" Margin="1" Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>

        <!--하단 레이아웃-->
        <Grid Grid.Row="1" Margin="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--데이터그리드-->
            <DataGrid x:Name="dgdMain" 
                      SelectionChanged="DgdMain_SelectionChanged" Style="{DynamicResource DataGridSet1}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="순" Width="auto" Binding="{Binding Num}" />
                    <DataGridTextColumn Header="지시일자" Width="auto" Binding="{Binding InstDate_CV}" />
                    <DataGridTextColumn Header="지시번호" Width="auto" Binding="{Binding InstID}" Visibility="Hidden"/>
                    <DataGridTextColumn Header="품번" Width="auto" Binding="{Binding BuyerArticleNo}" />
                    <DataGridTextColumn Header="품명" Width="auto" Binding="{Binding Article}" />
                    <DataGridTextColumn Header="공정" Width="auto" Binding="{Binding Process}" />
                    <DataGridTextColumn Header="지시수량" Width="auto" Binding="{Binding InstQty, StringFormat = '#,###.#'}" />
                    <DataGridTextColumn Header="지시순번" Width="auto" Binding="{Binding InstDetSeq}" />
                </DataGrid.Columns>
            </DataGrid>

            <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext" />

            <!--우측레이아웃-->
            <Border x:Name="bdrRecipe" Grid.Column="2" Margin="1" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200*" />
                        <RowDefinition Height="332*" />
                        <!--<RowDefinition Height="224*" />-->
                    </Grid.RowDefinitions>
                    <!--우측 상단 레이아웃-->
                    <Border x:Name="bdrData" Grid.Row="0" Margin="2" IsHitTestVisible="False">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>
                            <Label x:Name="lblMsg" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="1" HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center" Background="Yellow" Visibility="Hidden">
                                <TextBlock x:Name="tbkMsg" Text="자료 입력 중" VerticalAlignment="Center"/>
                            </Label>

                            <Label Grid.Column="0" Grid.Row="1" Margin="1" HorizontalContentAlignment="Center" 
                                   VerticalContentAlignment="Center" Content="지시번호" />
                            <TextBox x:Name="txtInstID" Grid.Column="1" Grid.Row="1" 
                                     Margin="1" Text="{Binding InstID}" />

                            <Label Grid.Column="0" Grid.Row="2" Margin="1" HorizontalContentAlignment="Center" 
                                   VerticalContentAlignment="Center" Content="지시일자" />
                            <DatePicker x:Name="dtpInstDate" Grid.Column="1" Grid.Row="2" 
                                     Margin="1" Text="{Binding InstDate_CV}" />

                            

                            <Label Grid.Column="0" Grid.Row="4" Margin="1" HorizontalContentAlignment="Center" 
                                   VerticalContentAlignment="Center" Content="공     정" />
                            <TextBox x:Name="txtProcess" Grid.Column="1" Grid.Row="4" Margin="1" 
                                     Text="{Binding Process}" Tag="{Binding ProcessID}"/>
                            <Label Grid.Column="0" Grid.Row="3" Margin="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="품     명" />
                            <TextBox x:Name="txtOrderArticle" Grid.Column="1" Grid.Row="3" Margin="1" Text="{Binding Article}" Tag="{Binding OrderArticleID}" />

                            <Label Grid.Column="3" Grid.Row="4" Margin="1" Content="품     번" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                            <TextBox x:Name="txtArticle" Grid.Column="4" Grid.Row="4" Margin="1" Text="{Binding BuyerArticleNo}" Tag="{Binding ArticleID}" />
                            
                            <Label Grid.Column="0" Grid.Row="5" Margin="1" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center" Content="지시수량" />
                            <TextBox x:Name="txtQty" Grid.Column="1" Grid.Row="5" Margin="1" 
                                     Text="{Binding InstQty}" />

                            <Label Grid.Column="3" Grid.Row="5" Margin="1" Content="지시순번" HorizontalContentAlignment="Center" 
                                   VerticalContentAlignment="Center" />
                            <TextBox x:Name="txtBatjaWeight"  Grid.Column="4" Grid.Row="5" Margin="1" 
                                     Text="{Binding InstDetSeq}" />

                            <Label Grid.Column="0" Grid.Row="6" Margin="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="비     고" />
                            <TextBox x:Name="txtComments" Grid.Column="1" Grid.Row="6" Margin="1" Grid.ColumnSpan="4"  Text="{Binding Remark}" />
                        </Grid>
                    </Border>

                    <!--우측 하단 레이아웃-->
                    <GroupBox x:Name="grbInSub" Grid.Row="1" Margin="1">
                        <Grid>
                            <!--데이터 그리드-->
                            <DataGrid x:Name="dgdSub" Style="{DynamicResource DataGridSet1}"
                                      IsHitTestVisible="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="번호" Binding="{Binding Num}" Width="auto"/>
                                    <DataGridTextColumn Header="하위품번" Binding="{Binding CHildArticle}" Width="*"/>
                                    <DataGridTextColumn Header="순서" Binding="{Binding ChildSeq}" Width="auto"/>
                                    <DataGridTemplateColumn Header="예외관리" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox Click="chkScanExcept_Click">
                                                    <CheckBox.Style>
                                                        <Style TargetType="CheckBox">
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ScanExceptYN}" Value="Y">
                                                                    <Setter Property="IsChecked" Value="True" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ScanExceptYN}" Value="N">
                                                                    <Setter Property="IsChecked" Value="False" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </CheckBox.Style>
                                                </CheckBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Border>

        </Grid>

    </Grid>
</UserControl>
