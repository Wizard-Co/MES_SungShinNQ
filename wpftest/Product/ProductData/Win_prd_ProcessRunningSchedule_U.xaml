<UserControl
    x:Class="WizMes_SungShinNQ.Win_prd_ProcessRunningSchedule_U"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WizMes_SungShinNQ"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="620"
    d:DesignWidth="820"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <!--  상하 레이아웃 나누기  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>

        <!--  상단 레이아웃  -->
        <!--  상단 레이아웃 배경  -->
        <Grid
            Grid.Row="0"
            Margin="2"
            Background="{DynamicResource WizMes_SungShinNQ}">
            <!--  열 추가  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="130*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>
            <!--  행 추가  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  기간  -->
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblDate"
                    Grid.Column="0"
                    MouseLeftButtonUp="lblDate_MouseLeftButtonUp"
                    Style="{DynamicResource LabelSearch}">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox
                                x:Name="chkDate"
                                VerticalAlignment="Center"
                                Checked="chkDate_Checked"
                                Unchecked="chkDate_Unchecked" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Style="{DynamicResource TextBlockInViewBoxSearch}" Text="편성 일자" />
                        </Viewbox>
                    </StackPanel>
                </Label>
                <DatePicker
                    x:Name="dtpSDate"
                    Grid.Column="1"
                    Style="{DynamicResource DatePickerSearch}" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker
                    x:Name="dtpEDate"
                    Grid.Column="1"
                    Style="{DynamicResource DatePickerSearch}" />
            </Grid>

            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnLastMonth"
                    Grid.Column="0"
                    Click="btnLastMonth_Click"
                    Content="전월" />
                <Button
                    x:Name="btnYesterday"
                    Grid.Column="1"
                    Click="btnYesterday_Click"
                    Content="전일" />
                <Button
                    x:Name="btnThisMonth"
                    Grid.Column="2"
                    Click="btnThisMonth_Click"
                    Content="금월" />
                <Button
                    x:Name="btnToday"
                    Grid.Column="3"
                    Click="btnToday_Click"
                    Content="금일" />
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnAdd"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="19,0,39,0"
                    Click="btnAdd_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="신규생성" />
                    </StackPanel>
                </Button>
            </Grid>

            <!--  우측 상단 버튼  -->
            <Grid Grid.RowSpan="4" Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnSearch"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="1"
                        Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSearch}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSearch}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnUpdate"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="1"
                        Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiUpdate}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblUpdate}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnDelete"
                        Grid.Column="2"
                        Margin="1"
                        Click="btnDelete_Click"
                        Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiDelete}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblDelete}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Grid.Column="3"
                        Margin="1"
                        Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiClose}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblClose}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="btnSave"
                        Grid.Column="1"
                        Margin="1"
                        Click="btnSave_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSave}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSave}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnCancel"
                        Grid.Column="2"
                        Margin="1"
                        Click="btnCancel_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiCancle}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblCancle}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnExcel"
                        Grid.Column="3"
                        Margin="1"
                        Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiExcel}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblExcel}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>

        <!--  하단 레이아웃  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="17.5*" />
            </Grid.RowDefinitions>
            <!--  자료 수정중  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="60*" />
                    <ColumnDefinition Width="580*" />
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblMsg"
                    Grid.Column="1"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Yellow"
                    Foreground="Red"
                    Visibility="Hidden">
                    <TextBlock x:Name="tbkMsg" Text="자료 수정 중" />
                </Label>
            </Grid>

            <!--  데이터그리드  -->
            <DataGrid
                x:Name="dgdMain"
                Grid.RowSpan="2"
                Margin="1,0,1,1"
                IsReadOnly="True"
                Style="{DynamicResource DataGridSet1}">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <EventSetter Event="KeyUp" Handler="DataGridIn_TextFocus" />
                        <EventSetter Event="GotFocus" Handler="DataGridCell_GotFocus" />
                        <EventSetter Event="MouseUp" Handler="DataGridCell_MouseUp" />
                        <EventSetter Event="KeyDown" Handler="DataGird_KeyDown" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Num}"
                        Header="순" />
                    <DataGridTemplateColumn x:Name="dgdtpeChkC" Header="C">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:Name="chkChoice">
                                <CheckBox
                                    x:Name="chkC"
                                    VerticalAlignment="Center"
                                    Checked="chkC_Checked"
                                    IsChecked="{Binding IsCheck, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Unchecked="chkC_Unchecked">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding yyyymmdd}"
                        Header="일자" />
                    <DataGridTextColumn
                        Binding="{Binding DayName}"
                        ElementStyle="{DynamicResource DataGridCellCenter}"
                        Header="요일">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DayName}" Value="토요일">
                                        <Setter Property="Background" Value="LightBlue" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DayName}" Value="일요일">
                                        <Setter Property="Background" Value="LightCoral" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding processid}"
                        Header="공정id"
                        Visibility="Hidden" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding process}"
                        ElementStyle="{DynamicResource DataGridCellLeft}"
                        Header="공정" />
                    <DataGridTemplateColumn Width="auto" Header="작업시간">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding planWorkTime, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TextAlignment="Left" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    PreviewTextInput="TextBox_PreviewTextInput"
                                    Text="{Binding planWorkTime, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TextAlignment="Left" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="auto" Header="비고">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TextAlignment="Left" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    TextAlignment="Left" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>

        </Grid>

    </Grid>
</UserControl>
