<UserControl x:Class="WizMes_SungShinNQ.Win_prd_PlanInput_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_SungShinNQ"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid>
        <!--상하 레이아웃 나누기-->
        <Grid.RowDefinitions>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>

        <!--상단 레이아웃-->
        <!--상단 레이아웃 배경-->
        <Grid Grid.Row="0" Margin="1" Background="{DynamicResource WizMes_SungShinNQ}" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="100*" />
            </Grid.ColumnDefinitions>

            <!--수주일자-->
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblOrderDay" Grid.Column="0" Margin="1" VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Left" MouseLeftButtonDown="lblOrderDay_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkOrderDay" Checked="chkOrderDay_Checked"
                                      Unchecked="chkOrderDay_Unchecked" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text=" 수주 일자" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpSDate" Grid.Column="1" Margin="1" VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnThisMonth" Grid.Column="0" Margin="1" Content="금월" 
                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                            Click="btnThisMonth_Click" />
                    <Button x:Name="btnToday" Grid.Column="1" Margin="1" Content="금일" 
                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                            Click="btnToday_Click" />
                    <!--<TextBlock Grid.Row="1" Grid.Column="2" Text="까지" Margin="2" VerticalAlignment="Center"/>-->
                    <!--<TextBlock Grid.Row="0" Grid.Column="2" Text="부터" Margin="2" VerticalAlignment="Center"/>-->
                </Grid>
                <DatePicker x:Name="dtpEDate" Grid.Column="1" Margin="1" VerticalAlignment="Center"/>
            </Grid>

            <!--최종거래처-->
            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lbInInCustom" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" MouseLeftButtonUp="lblInCustom_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkInCustom" Checked="chkInCustom_Checked" Unchecked="chkInCustom_Unchecked" VerticalAlignment="Center" />
                        </Viewbox>
                        <TextBlock Text="최종거래처" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                
                <TextBox x:Name="txtInCustom" Grid.Column="1" Margin="1" IsEnabled="False" KeyDown="txtInCustom_KeyDown" />
                <Button x:Name="btnPfInCustom" Grid.Column="2" Margin="1" IsEnabled="False" Click="btnPfInCustom_Click">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" />
                </Button>
            </Grid>

            <!--거래처-->
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblCustom" Grid.Column="0" Margin="1" VerticalContentAlignment="Center" 
                       HorizontalContentAlignment="Left" MouseLeftButtonUp="lblCustom_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkCustom" Checked="chkCustom_Checked" 
                                      Unchecked="chkCustom_Unchecked" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text="거 래 처" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtCustom" Grid.Column="1" Margin="1" 
                         IsEnabled="False" Keyboard.KeyDown="txtCustom_KeyDown"/>
                <Button x:Name="btnPfCustom" Grid.Column="2" Margin="1" 
                        IsEnabled="False" Click="btnPfCustom_Click">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <!--품명-->
            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticle" Grid.Column="0" Margin="1" VerticalContentAlignment="Center" 
                       HorizontalContentAlignment="Left" MouseLeftButtonUp="lblArticle_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkArticle" Checked="chkArticle_Checked" 
                                      Unchecked="chkArticle_Unchecked" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text="품     명" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtArticle" Grid.Column="1" Margin="1" 
                         IsEnabled="False" KeyDown="txtArticle_KeyDown"/>
                <Button x:Name="btnPfArticle" Grid.Column="2" Margin="1" 
                        IsEnabled="False" Click="btnPfArticle_Click">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <!--관리번호-->
            <Grid Grid.Row="3" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblOrder" Grid.Column="0" Margin="1" VerticalContentAlignment="Center" 
                       HorizontalContentAlignment="Left" MouseLeftButtonUp="lblOrder_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkOrder" VerticalContentAlignment="Center" 
                                      Checked="chkOrder_Checked" Unchecked="chkOrder_Unchecked"/>
                        </Viewbox>
                        <TextBlock x:Name="tbkOrder" Text="관리번호" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtOrder" Grid.Column="1" Margin="1" IsEnabled="False"/>
            </Grid>

            <!--마감분 포함-->
            <Grid Grid.Row="0" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblCloseClss" Grid.Column="0" Margin="1" VerticalContentAlignment="Center" 
                       HorizontalContentAlignment="Left" MouseLeftButtonDown="lblCloseClss_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkClosClss" />
                        </Viewbox>
                        <TextBlock Text=" 지시마감 포함" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
            </Grid>

            <!--지시완료분 포함-->
            <Grid Grid.Row="1" Grid.Column="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblCompleteOrder" Grid.Column="0" Margin="1" VerticalContentAlignment="Center" 
                       HorizontalContentAlignment="Left" MouseLeftButtonDown="lblCompleteOrder_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkCompleteOrder" />
                        </Viewbox>
                        <TextBlock Text=" 지시완료 포함" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
            </Grid>

            <!--Order No. 관리번호-->
            <Grid Grid.Row="2" Grid.Column="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Border Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Background="#ededed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <RadioButton x:Name="rbnOrderNo" Grid.Column="0" Content="Order No." Margin="1" 
                                     VerticalAlignment="Center" Click="rbnOrderNo_Click"/>
                        <RadioButton x:Name="rbnOrderID" Grid.Column="1" Content="관리 번호" Margin="1" 
                                     VerticalAlignment="Center" Click="rbnOrderID_Click" IsChecked="True"/>
                    </Grid>
                </Border>
            </Grid>

            <!--우측 상단 버튼-->
            <Grid Grid.RowSpan="4" Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnSearch" Grid.Column="0" Click="btnSearch_Click" Margin="1">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" 
                               VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnClose" Grid.Column="1" Click="btnClose_Click" Margin="1" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" 
                               VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <!--하단 레이아웃 나누기-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="200*" />
                <RowDefinition Height="335*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <!--데이터그리드-->
                <DataGrid x:Name="dgdMain" Grid.Row="0"  SelectionChanged="dgdMain_SelectionChanged" Style="{DynamicResource DataGridSet1}">
                    <!-- FrozenColumnCount="5" -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="28"></Setter>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns >
                        <!--<DataGridTemplateColumn Header="" Width="auto" SortMemberPath="subPlanComplete">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding subPlanComplete}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>-->
                        <DataGridTextColumn Header="수주일자" Width="auto" Binding="{Binding AcptDate_CV}" />
                        <DataGridTextColumn Header="거래처" Width="auto" Binding="{Binding KCustom}" />
                        <DataGridTextColumn x:Name="dgdtxtBuyerArticleNo" Header="품번" Width="auto" Binding="{Binding BuyerArticleNo}" />
                        <DataGridTextColumn Header="품명" Width="auto" Binding="{Binding Article}" />
                        <DataGridTextColumn x:Name="dgdtxtBuyerModel" Header="차종" Width="auto" Binding="{Binding BuyerModel}" />
                        <DataGridTextColumn Header="관리번호" Width="auto" Binding="{Binding OrderID}" />
                        <DataGridTextColumn Header="Order No." Width="auto" Binding="{Binding OrderNo}" />
                        <DataGridTextColumn Header="미계획량" Width="auto" Binding="{Binding notOrderInstQty, StringFormat = '#,###.#'}" 
                                            CellStyle="{StaticResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="계획량" Width="auto" Binding="{Binding OrderInstQy, StringFormat = '#,###.#'}" 
                                            CellStyle="{StaticResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="투입량" Width="auto" Binding="{Binding p1WorkQty, StringFormat = '#,###.#'}" 
                                            CellStyle="{StaticResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="검사량" Width="auto" Binding="{Binding InspectQty, StringFormat = '#,###.#'}" 
                                            CellStyle="{StaticResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="출고량" Width="auto" Binding="{Binding OutQty, StringFormat = '#,###.#'}" 
                                            CellStyle="{StaticResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="공정패턴코드" Width="auto" Binding="{Binding PatternID}" />
                        <DataGridTemplateColumn Header="품명그룹" Width="auto" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Tag="{Binding ArticleGrpID}" Text="{Binding ArticleGrpName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="지시사항" Width="auto" Binding="{Binding Remark}" />
                        <DataGridTextColumn Header="품명코드" Width="auto" Binding="{Binding ArticleID}" />
                        <DataGridTextColumn Header="지시완료" Width="auto" Binding="{Binding PlanComplete}" />
                        <DataGridTextColumn Header="InstID" Width="auto" Binding="{Binding InstID}" Visibility="Hidden"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock x:Name="tbkCount" Grid.Row="1" VerticalAlignment="Center" Text="▶ 검색 결과 : "/>
            </Grid>
            <!--화면 레이아웃 나누기-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="110*" />
                        <RowDefinition Height="100*" />
                        <RowDefinition Height="64*" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Margin="1" BorderBrush="Gray" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.75*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="9.6*" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Content="지시 일자" Margin="1,1,1,0"
                                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="0.2*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="1.2*" />
                                        <ColumnDefinition Width="0.8*" />
                                        <ColumnDefinition Width="1.2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="1.2*" />
                                    </Grid.ColumnDefinitions>
                                    <DatePicker x:Name="dtpInstDate" Grid.Column="0" Margin="1" />
                                    <Label Grid.Column="2" Margin="1" Content="지시 수량" 
                                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                    <TextBox x:Name="txtQty" Grid.Column="3" Grid.ColumnSpan="2" Margin="1"
                                             PreviewTextInput="txtQty_PreviewTextInput" Style="{StaticResource InputCommaZeroTextBoxNoRight}"/>
                                    <!--<ComboBox x:Name="cboUnitClss" Grid.Column="4" Margin="1" />-->
                                    <Label Grid.Column="5" Margin="1" Content="작업완료일" />
                                    <DatePicker x:Name="dtpInstCompleteDate" Grid.Column="6" Margin="1" />
                                    <CheckBox x:Name="chkStuffClose" Grid.Column="7" Margin="1" 
                                              VerticalAlignment="Center" VerticalContentAlignment="Center">
                                        <TextBlock Text="투입완료" VerticalAlignment="Center"/>
                                    </CheckBox>
                                </Grid>
                                <Viewbox Grid.Row="1" Grid.Column="1" Margin="1">
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                               Text="지시수량의 단위가 EA인 공정을 포함하는 지시량이 있는 경우 수주량에서 제외하고 미계획량을 표시"
                                               VerticalAlignment="Center" Foreground="Blue" Margin="2"/>
                                </Viewbox>

                                <Label Grid.Row="2" Grid.Column="0" Content="공정 패턴" Margin="1"
                                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                <ComboBox x:Name="cboProcessPattern" Grid.Row="2" Grid.Column="1" Margin="1" 
                                          SelectedValue="{Binding PatternID}" Background="White"
                                          SelectionChanged="cboProcessPattern_SelectionChanged"/>
                                <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox x:Name="chkMtrExceptYN" Grid.Column="0" Margin="1" 
                                              Content="원자재 투입 예외 관리" 
                                             />
                                    <CheckBox x:Name="chkOutwareExceptYN" Grid.Column="1" Margin="1" 
                                              Content="출고 예외 처리" 
                                             />
                                    <CheckBox x:Name="chkRemainData" Grid.Column="2" Margin="1" 
                                              Content="저장 후 값 유지" IsChecked="True"/>
                                    <CheckBox x:Name="chkAutoPrint" Grid.Column="3" Margin="1" 
                                              Content="저장과 동시 작업지시안내" Visibility="Hidden"/>
                                </Grid>

                                <Label Grid.Row="4" Grid.Column="0" Content="비고 사항" Margin="1"
                                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                <TextBox x:Name="txtRemark" Grid.Row="4" Grid.Column="1" 
                                         Grid.RowSpan="2" Margin="1"/>

                            </Grid>

                            <Grid Grid.Column="1" Margin="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.2*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btnAdd" Grid.Row="0" Grid.Column="0" 
                                        Margin="1" Click="btnAdd_Click" IsEnabled="True">
                                    <StackPanel>
                                        <Image Source="{DynamicResource btiInsert}" Style="{DynamicResource imgSize}"/>
                                        <TextBlock Text="{Binding Source={StaticResource tblInsert},Mode=OneWay,Path=Text}" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnCancel" Grid.Row="0" Grid.Column="1" 
                                        Margin="1" IsEnabled="False" Click="btnCancel_Click" >
                                    <StackPanel>
                                        <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}"/>
                                        <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnSave" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                        IsEnabled="False" Click="btnSave_Click">
                                    <StackPanel>
                                        <TextBlock Text="작업지시(C)" Margin="4"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>

                    <!--데이터그리드-->
                    <GroupBox Grid.Row="1" Header="공정별 작업지시 상세 내용" >
                        <Grid>
                            <DataGrid x:Name="dgdPlanInput" Grid.Row="0"  Visibility="Visible" Style="{DynamicResource DataGridEditSet}" >
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridCell">
                                        <EventSetter Event="PreviewKeyDown" Handler="DataGird_PreviewKeyDown"/>
                                        <EventSetter Event="KeyDown" Handler="DataGird_KeyDown"/>
                                        <EventSetter Event="KeyUp" Handler="DataGridIn_TextFocus"/>
                                        <EventSetter Event="GotFocus" Handler="DataGridCell_GotFocus" />
                                        <EventSetter Event="MouseUp" Handler="DataGridCell_MouseUp" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Width="auto" Header="" Binding="{Binding Num}" />
                                    <DataGridTextColumn Width="auto" Header="공정코드" Binding="{Binding ProcessID}" Visibility="Hidden"/>
                                    <DataGridTextColumn Width="auto" Header="공정명" Binding="{Binding Process}" />
                                    <DataGridTextColumn Width="auto" Header="품명코드" Binding="{Binding ArticleID}" />
                                    <DataGridTemplateColumn Width="auto" Header="품번" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding BuyerArticleNo}" Padding="5 0" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Width="auto" Header="품명" Binding="{Binding Article}" />

                                    <!-- ChildBuyerArticleNo -->
                                    <DataGridTemplateColumn Width="auto" Header="하위 품번" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ChildBuyerArticleNo}" Padding="5 0" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn x:Name="dgdtpeOrderQty" Width="auto" Header="지시수량" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding InstQty, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="2" TextAlignment="Right"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox x:Name="dgdtpetxtOrderQty" Text="{Binding InstQty, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                       TextAlignment="Right"
                                                       PreviewTextInput="dgdtpetxtOrderQty_PreviewTextInput"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="시작일" Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding StartDate_CV, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <DatePicker SelectedDate="{Binding StartDate_CV, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectedDateChanged="dtpStartDate_SelectedDateChanged"
                                                              />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="종료일" Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding EndDate_CV, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <DatePicker SelectedDate="{Binding EndDate_CV, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectedDateChanged="dtpEndDate_SelectedDateChanged"
                                                              />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="지시사항" Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding InstRemark, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TextAlignment="Left" VerticalAlignment="Center" Padding="5 0 0 0"/>
                                            </DataTemplate>
