<UserControl
    x:Class="WizMes_SungShinNQ.Win_prd_PlanInputView_U"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WizMes_SungShinNQ"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="620"
    d:DesignWidth="820"
    Loaded="UserControl_Loaded"
    SizeChanged="UserControl_SizeChanged"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <!--  전체 중 상단  -->
        <Grid Grid.Row="0" Background="{DynamicResource WizMes_SungShinNQ}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="130*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--<TextBlock Grid.Row="0" Grid.Column="2" Margin="1" Text="부터" />-->
            <!--<TextBlock Grid.Row="1" Grid.Column="2" Margin="1" Text="까지" />-->
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblOrderDay"
                    Grid.Column="0"
                    Margin="1"
                    MouseLeftButtonUp="lblOrderDay_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox
                                x:Name="chkOrderDay"
                                VerticalAlignment="Center"
                                Checked="chkOrderDay_Checked"
                                IsChecked="True"
                                Unchecked="chkOrderDay_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 지시 일자" />
                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpSDate" Grid.Column="1" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnThisMonth"
                        Grid.Column="0"
                        Margin="1"
                        Click="btnThisMonth_Click"
                        Content="금월" />
                    <Button
                        x:Name="btnToday"
                        Grid.Column="1"
                        Margin="1"
                        Click="btnToday_Click"
                        Content="금일" />
                </Grid>
                <DatePicker x:Name="dtpEDate" Grid.Column="1" />
            </Grid>

            <!--  최종거래처  -->
            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lbInInCustom"
                    Grid.Column="0"
                    Margin="1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lbInCustom_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkInCustom"
                                VerticalAlignment="Center"
                                Checked="chkInCustom_Checked"
                                Unchecked="chkInCustom_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text="최종거래처" />
                    </StackPanel>
                </Label>

                <TextBox
                    x:Name="txtInCustom"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False"
                    KeyDown="txtInCustom_KeyDown" />
                <Button
                    x:Name="btnPfInCustom"
                    Grid.Column="2"
                    Margin="1"
                    Click="btnPfInCustom_Click"
                    IsEnabled="False">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" />
                </Button>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblCustom"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="1"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblCustom_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox
                                x:Name="chkCustom"
                                VerticalAlignment="Center"
                                Checked="chkCustom_Checked"
                                Unchecked="chkCustom_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text="거 래 처" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtCustom"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False"
                    Keyboard.KeyDown="txtCustom_KeyDown" />
                <Button
                    x:Name="btnPfCustom"
                    Grid.Column="2"
                    Margin="1"
                    Click="btnPfCustom_Click"
                    IsEnabled="False">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" />
                </Button>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblArticle"
                    Grid.Column="0"
                    Margin="1"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblArticle_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox
                                x:Name="chkArticle"
                                VerticalAlignment="Center"
                                Checked="chkArticle_Checked"
                                Unchecked="chkArticle_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text="품     명" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtArticle"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False"
                    Keyboard.KeyDown="txtArticle_KeyDown" />
                <Button
                    x:Name="btnPfArticle"
                    Grid.Column="2"
                    Margin="1"
                    Click="btnPfArticle_Click"
                    IsEnabled="False">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" />
                </Button>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblOrder"
                    Grid.Column="0"
                    Margin="1"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblOrder_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox
                                x:Name="chkOrder"
                                Checked="chkOrder_Checked"
                                Unchecked="chkOrder_Unchecked" />
                        </Viewbox>
                        <TextBlock
                            x:Name="tbkOrder"
                            VerticalAlignment="Center"
                            Text="관리번호" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtOrder"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="108*" />
                    <ColumnDefinition Width="22*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblComplete"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="1"
                    VerticalAlignment="Center"
                    MouseLeftButtonDown="lblComplete_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkComplete" Margin="1" />
                        </Viewbox>
                        <TextBlock
                            Margin="2,0,0,0"
                            VerticalAlignment="Center"
                            Text="지시완료분 포함" />
                    </StackPanel>
                </Label>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="108*" />
                    <ColumnDefinition Width="22*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblTheEndSrh"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="1"
                    VerticalAlignment="Center"
                    MouseLeftButtonDown="lblTheEndSrh_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkTheEndSrh" Margin="1" />
                        </Viewbox>
                        <TextBlock
                            Margin="2,0,0,0"
                            VerticalAlignment="Center"
                            Text="지시마감 포함" />
                    </StackPanel>
                </Label>
            </Grid>
            <Grid
                Grid.Row="2"
                Grid.RowSpan="2"
                Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="108*" />
                    <ColumnDefinition Width="22*" />
                </Grid.ColumnDefinitions>
                <Border
                    Background="#ededed"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <RadioButton
                            x:Name="rbnOrderNo"
                            Grid.Row="0"
                            Margin="1"
                            VerticalAlignment="Center"
                            Click="rbnOrderNo_Click"
                            Content="Order No." />
                        <RadioButton
                            x:Name="rbnOrderID"
                            Grid.Row="1"
                            Margin="1"
                            VerticalAlignment="Center"
                            Click="rbnOrderID_Click"
                            Content="관리 번호" />
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.RowSpan="4" Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnSearch"
                        Grid.Column="1"
                        Margin="1"
                        Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSearch}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSearch}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnDelete"
                        Grid.Column="2"
                        Margin="1"
                        Click="btnDelete_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiDelete}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblDelete}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnOrderPrint"
                        Grid.Column="2"
                        Margin="1"
                        Click="btnOrderPrint_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiPrint}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="지시서발행" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Grid.Column="3"
                        Margin="1"
                        Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiClose}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblClose}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnOrderListPrint"
                        Grid.Column="1"
                        Margin="1"
                        Click="btnOrderListPrint_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiPrint}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="지시목록발행" />
                        </StackPanel>
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menu">
                                <MenuItem
                                    x:Name="menuSeeAhead"
                                    Click="menuSeeAhead_Click"
                                    Header="미리보기" />
                                <MenuItem
                                    x:Name="menuRightPrint"
                                    Click="menuRightPrint_Click"
                                    Header="바로인쇄" />
                                <MenuItem
                                    x:Name="menuClose"
                                    Click="menuClose_Click"
                                    Header="닫   기" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <Button
                        x:Name="btnUpdate"
                        Grid.Column="2"
                        Margin="1"
                        Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiUpdate}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblUpdate}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnExcel"
                        Grid.Column="3"
                        Margin="1"
                        Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiExcel}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblExcel}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <!--  //전체 중 상단  -->

        <!--  전체 중 하단  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="65" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="13*" />
                </Grid.RowDefinitions>
                <CheckBox
                    x:Name="AllCheck"
                    Grid.Column="0"
                    Margin="10,1,1,1"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Checked="AllCheck_Checked"
                    Content="전체선택"
                    Unchecked="AllCheck_Unchecked" />

                <DataGrid
                    x:Name="dgdMain"
                    Grid.Row="1"
                    SelectionChanged="dgdMain_SelectionChanged"
                    Style="{DynamicResource DataGridSet1}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Num}"
                            Header="순" />
                        <DataGridTemplateColumn x:Name="dgdtpeChkC" Header="C">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:Name="chkChoice">
                                    <CheckBox
                                        x:Name="chkC"
                                        VerticalAlignment="Center"
                                        Checked="chkC_Checked"
                                        IsChecked="{Binding IsCheck, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        Unchecked="chkC_Unchecked">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </CheckBox.Style>
                                    </CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="auto" Header="완">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PlanComplete}" Value="*">
                                                        <Setter Property="Text" Value="■" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PlanComplete}" Value="">
                                                        <Setter Property="Text" Value="" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="auto" Header="마감">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PlanTheEnd}" Value="*">
                                                        <Setter Property="Text" Value="▲" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PlanTheEnd}" Value="">
                                                        <Setter Property="Text" Value="" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding InstDate}"
                            Header="지시일자" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding KCustom}"
                            Header="거래처" />

                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding BuyerArticleNo}"
                            Header="품번" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Article}"
                            Header="품명" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding BuyerModel}"
                            Header="차종" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Article}"
                            Header="품목"
                            Visibility="Hidden" />

                        <DataGridTemplateColumn
                            Width="auto"
                            Header="수주량"
                            SortMemberPath="OrderQty">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OrderQty, StringFormat={}{0:#\,#.##}}" TextAlignment="Right" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="auto"
                            Header="계획량"
                            SortMemberPath="OrderInstQy">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OrderInstQy, StringFormat={}{0:#\,#.##}}" TextAlignment="Right" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding TotOrderinstqty, StringFormat={}{0:#\,#}}"
                            ElementStyle="{DynamicResource DataGridCellRight}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                    FontSize="10"
                                    Text="합계&#10;계획량"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>

                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding notOrderInstQty, StringFormat={}{0:#\,#}}"
                            ElementStyle="{DynamicResource DataGridCellRight}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                    FontSize="10"
                                    Text="합계&#10;미계획량"
/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>

                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding p1WorkQty, StringFormat={}{0:#\,#}}"
                            ElementStyle="{DynamicResource DataGridCellRight}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                    FontSize="10"
                                    Text="합계&#10;투입량"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>

                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding InspectQty, StringFormat={}{0:#\,#}}"
                            ElementStyle="{DynamicResource DataGridCellRight}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                    FontSize="10"
                                    Text="합계&#10;검사량" />
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>

                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding OutQty, StringFormat={}{0:#\,#}}"
                            ElementStyle="{DynamicResource DataGridCellRight}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                    FontSize="10"
                                    Text="합계&#10;출고량"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>

                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding ProcPattern}"
                            Header="지시패턴" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Remark}"
                            Header="지시사항" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding InstID}"
                            Header="지시번호" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding PlanComplete}"
                            Header="지시완료" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding MtrExceptYN}"
                            CellStyle="{DynamicResource DataGridCellAndCentering}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                    FontSize="10"
                                    Text="원자재&#10;예외"
                                    TextAlignment="Center" />
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding OutwareExceptYN}"
                            CellStyle="{DynamicResource DataGridCellAndCentering}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                    FontSize="10"
                                    Text="출고&#10;예외"
                                    TextAlignment="Center" />
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Border Grid.Row="1" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <DataGrid
                        x:Name="dgdTotal"
                        Grid.Row="1"
                        HeadersVisibility="All"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Height" Value="40" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="*" Header=" ">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            Background="#365fb1"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            IsReadOnly="True"
                                            Text="총 수량"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Header="합계 수주량">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            IsReadOnly="True"
                                            Text="{Binding OrderQty}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="*" Header="합계 계획량">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            IsReadOnly="True"
                                            Text="{Binding TotOrderinstqty}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="*" Header="수주별 합계 투입량">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            IsReadOnly="True"
                                            Text="{Binding p1WorkQty}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="*" Header="수주별 합계 검사량">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            IsReadOnly="True"
                                            Text="{Binding InspectQty}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="*" Header="수주별 합계 출고량">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            IsReadOnly="True"
                                            Text="{Binding OutQty}"
                                            TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Column="0"
                    Background="WhiteSmoke"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="7*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="6.5*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="1"
                                Text="[지시상세]" />
                            <CheckBox
                                x:Name="chkMtrExceptYN"
                                Grid.Column="2"
                                Margin="1"
                                Content="원자재 투입 예외 관리"
                                IsEnabled="False" />
                            <CheckBox
                                x:Name="chkOutWareExceptYN"
                                Grid.Column="3"
                                Margin="1"
                                Content="출고 예외 처리"
                                IsEnabled="False" />
                            <CheckBox
                                x:Name="chkTheEnd"
                                Grid.Column="4"
                                Margin="1"
                                Content="지시마감 처리"
                                IsEnabled="False" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="0" />
                            </Grid.RowDefinitions>
                            <DataGrid
                                x:Name="dgdSub"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Margin="1"
                                IsReadOnly="True"
                                SelectionUnit="Cell">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridCell">
                                        <EventSetter Event="PreviewKeyDown" Handler="DataGird_PreviewKeyDown" />
                                        <EventSetter Event="KeyDown" Handler="DataGird_KeyDown" />
                                        <EventSetter Event="KeyUp" Handler="DataGridIn_TextFocus" />
                                        <EventSetter Event="GotFocus" Handler="DataGridCell_GotFocus" />
                                        <EventSetter Event="MouseUp" Handler="DataGridCell_MouseUp" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="auto"
                                        Binding="{Binding ProcessID}"
                                        Header="공정코드"
                                        Visibility="Hidden" />
                                    <DataGridTextColumn
                                        Width="auto"
                                        Binding="{Binding Process}"
                                        Header="공정명" />
                                    <DataGridTextColumn
                                        Width="auto"
                                        Binding="{Binding ArticleID}"
                                        Header="품명코드"
                                        Visibility="Hidden" />
                                    <DataGridTemplateColumn Width="auto" Header="품번">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Padding="5,0" Text="{Binding BuyerArticleNo}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="auto" Header="품명">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Padding="5,0" Text="{Binding Article}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="auto" Header="하위품번">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Padding="5,0" Text="{Binding ChildBuyerArticleNo}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        x:Name="dgdtpeQty"
                                        Width="auto"
                                        Header="지시수량">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Padding="5,0,3,0"
                                                    Text="{Binding InstQty, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    TextAlignment="Right" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    x:Name="txtInstQty"
                                                    Padding="5,0,3,0"
                                                    PreviewTextInput="dgdtpetxtInstQty_PreviewTextInput"
                                                    Text="{Binding InstQty, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    TextAlignment="Right" />

                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        x:Name="dgdtpeSDate"
                                        Width="auto"
                                        Header="시작일">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="2" Text="{Binding StartDate_CV, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <DatePicker SelectedDateChanged="dgdtpedtpSDate_SelectedDateChanged" Text="{Binding StartDate_CV, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        x:Name="dgdtpeEDate"
                                        Width="auto"
                                        Header="종료일">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="2" Text="{Binding EndDate_CV, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <DatePicker SelectedDateChanged="dgdtpedtpEDate_SelectedDateChanged" Text="{Binding EndDate_CV, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        x:Name="dgdtpeInsRemark"
                                        Width="auto"
                                        Header="지시사항">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="2" Text="{Binding InstRemark, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding InstRemark, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        x:Name="dgdtpeWorkQty"
                                        Width="auto"
                                        Header="생산수량"
                                        IsReadOnly="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Padding="5,0,3,0"
                                                    Text="{Binding WorkQty}"
                                                    TextAlignment="Right" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    Padding="5,0,3,0"
                                                    PreviewTextInput="dgdtpetxtWorkQty_PreviewTextInput"
                                                    Text="{Binding WorkQty}"
                                                    TextAlignment="Right"
                                                    TextChanged="dgdtpetxtWorkQty_TextChanged">
                                                    <TextBox.Style>
                                                        <Style TargetType="TextBox">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=dgdtpeWorkQty, Path=IsReadOnly}" Value="False">
                                                                    <Setter Property="Background" Value="Red" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBox.Style>
                                                </TextBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        x:Name="dgdtpeMachine"
                                        Width="auto"
                                        MinWidth="50"
                                        Header="호기">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Background="#A9BCF5"
                                                    Tag="{Binding MachineID}"
                                                    Text="{Binding MachineNo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    Background="#acc6e7"
                                                    Keyboard.KeyDown="dgdtpetxtMachine_KeyDown"
                                                    MouseDoubleClick="dgdtpetxtMachine_MouseDoubleClick"
                                                    Tag="{Binding MachineID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    Text="{Binding MachineNo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        x:Name="dgdtpeLotID"
                                        Width="auto"
                                        Header="LOTID">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="2" Text="{Binding FirstProcessLotID}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding FirstProcessLotID}" TextChanged="dgdtpetxtFirstProcessLotID_TextChanged" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!--  인쇄를 위한 데이터 그리드  -->

                            <DataGrid
                                x:Name="dgdPrintForChecked"
                                Grid.Row="1"
                                Visibility="Hidden">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding prProcessID}" Header="공정" />
                                    <DataGridTextColumn Binding="{Binding prProcess}" Header="호기" />
                                    <DataGridTextColumn Binding="{Binding prKCustom}" Header="거래처" />
                                    <DataGridTextColumn Binding="{Binding prArticle}" Header="품명" />
                                    <DataGridTextColumn Binding="{Binding prBuyerArticleNo}" Header="품번" />
                                    <DataGridTextColumn Binding="{Binding prBuyerModel}" Header="차종" />
                                    <DataGridTextColumn Binding="{Binding prInstQty}" Header="지시수량" />
                                    <DataGridTextColumn Binding="{Binding prStartDate}" Header="시작일" />
                                    <DataGridTextColumn Binding="{Binding prEndDate}" Header="종료일" />
                                    <DataGridTextColumn Binding="{Binding prInstRemark}" Header="지시사항" />
                                    <DataGridTextColumn Binding="{Binding prlotID}" Header="LotNO" />
                                    <DataGridTextColumn Binding="{Binding prMachineNo}" Header="호기No" />
                                    <DataGridTextColumn Binding="{Binding prArticleID}" Header="품명코드" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                    </Grid>
                </Border>
                <Grid Grid.Column="1" Margin="2,10,2,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnSave"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="1"
                        Click="btnSave_Click"
                        Visibility="Hidden">
                        <StackPanel>
                            <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" />
                            <TextBlock Text="{Binding Source={StaticResource tblSave}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnCancel"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="1"
                        Click="btnCancel_Click"
                        Visibility="Hidden">
                        <StackPanel>
                            <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" />
                            <TextBlock Text="{Binding Source={StaticResource tblCancle}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <!--  //전체 중 하단  -->

        <Popup
            x:Name="PnlListPrint"
            Loaded="PnlListPrint_Loaded"
            Opened="PnlListPrint_Opened"
            Placement="Center"
            Visibility="Hidden">
            <Border
                Background="#ededed"
                BorderBrush="Green"
                BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.ColumnSpan="4"
                        Margin="1"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="Green"
                        Content="작업지시 목록 발행"
                        Foreground="White" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalContentAlignment="Center"
                        Content="지시일자" />
                    <DatePicker
                        x:Name="prdtpSDate"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="1"
                        SelectedDateChanged="prdtpSDate_SelectedDateChanged" />
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="btnPrToday"
                            Grid.Column="0"
                            Margin="1"
                            Click="btnPrToday_Click"
                            Content="금일" />
                        <Button
                            x:Name="btnPrThisMonth"
                            Grid.Column="1"
                            Margin="1"
                            Click="btnPrThisMonth_Click"
                            Content="금월" />
                    </Grid>
                    <DatePicker
                        x:Name="prdtpEDate"
                        Grid.Row="2"
                        Grid.Column="1"
                        SelectedDateChanged="prdtpEDate_SelectedDateChanged" />
                    <Label
                        x:Name="lblPrWork"
                        Grid.Row="3"
                        Grid.Column="0"
                        MouseLeftButtonDown="lblPrWork_MouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox>
                                <CheckBox
                                    x:Name="chkPrWork"
                                    Checked="chkPrWork_Checked"
                                    Unchecked="chkPrWork_Unchecked" />
                            </Viewbox>
                            <TextBlock
                                Margin="1"
                                VerticalAlignment="Center"
                                Text="공정명" />
                        </StackPanel>
                    </Label>
                    <ComboBox
                        x:Name="cboPrWork"
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="1"
                        IsEnabled="False"
                        SelectionChanged="cboPrWork_SelectionChanged" />
                    <Label
                        x:Name="lblPrMachine"
                        Grid.Row="4"
                        Grid.Column="0"
                        MouseLeftButtonDown="lblPrMachine_MouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox>
                                <CheckBox
                                    x:Name="chkPrMachine"
                                    Checked="chkPrMachine_Checked"
                                    Unchecked="chkPrMachine_Unchecked" />
                            </Viewbox>
                            <TextBlock
                                Margin="1"
                                VerticalAlignment="Center"
                                Text="호 기" />
                        </StackPanel>
                    </Label>
                    <ComboBox
                        x:Name="cboPrMachine"
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="1"
                        IsEnabled="False"
                        SelectionChanged="cboPrMachine_SelectionChanged" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        Text="공백"
                        Visibility="Hidden" />
                    <Button
                        x:Name="btnPrOK"
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        Grid.Column="3"
                        Margin="1"
                        HorizontalContentAlignment="Center"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Click="btnPrOK_Click"
                        Content="확인" />
                    <Button
                        x:Name="btnPrCancel"
                        Grid.Row="3"
                        Grid.RowSpan="2"
                        Grid.Column="3"
                        Margin="1"
                        HorizontalContentAlignment="Center"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Click="btnPrCancel_Click"
                        Content="취소" />
                    <Grid
                        Grid.Row="5"
                        Grid.ColumnSpan="4"
                        Width="150"
                        Height="10">
                        <DataGrid x:Name="DgdPrint" Visibility="Hidden">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    x:Name="PrDgdProcessID"
                                    Binding="{Binding prProcessID}"
                                    Header="공정" />
                                <DataGridTextColumn
                                    x:Name="PrDgdProcess"
                                    Binding="{Binding prProcess}"
                                    Header="호기" />
                                <DataGridTextColumn
                                    x:Name="PrDgdOrderNo"
                                    Binding="{Binding prKCustom}"
                                    Header="거래처" />
                                <DataGridTextColumn
                                    x:Name="PrDgdArticle"
                                    Binding="{Binding prArticle}"
                                    Header="품명" />
                                <DataGridTextColumn
                                    x:Name="PrDgdArticleNo"
                                    Binding="{Binding prBuyerArticleNo}"
                                    Header="품번" />
                                <DataGridTextColumn
                                    x:Name="PrDgdBuyerModel"
                                    Binding="{Binding prBuyerModel}"
                                    Header="차종" />
                                <DataGridTextColumn
                                    x:Name="PrDgdInstQty"
                                    Binding="{Binding prInstQty}"
                                    Header="지시수량" />
                                <DataGridTextColumn
                                    x:Name="PrDgdStartDate"
                                    Binding="{Binding prStartDate}"
                                    Header="시작일" />
                                <DataGridTextColumn
                                    x:Name="PrDgdEndDate"
                                    Binding="{Binding prEndDate}"
                                    Header="종료일" />
                                <DataGridTextColumn
                                    x:Name="PrDgdInstRemark"
                                    Binding="{Binding prInstRemark}"
                                    Header="지시사항" />
                                <DataGridTextColumn
                                    x:Name="PrDgdLotNID"
                                    Binding="{Binding prlotID}"
                                    Header="LotNO" />
                                <DataGridTextColumn
                                    x:Name="PrDgdMachineNo"
                                    Binding="{Binding prMachineNo}"
                                    Header="호기No" />
                                <DataGridTextColumn
                                    x:Name="PrDgdArticleID"
                                    Binding="{Binding prArticleID}"
                                    Header="품명코드" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
