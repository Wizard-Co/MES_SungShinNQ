<UserControl x:Class="WizMes_SungShinNQ.Win_Prd_ProdResult_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_SungShinNQ"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="532*"/>
        </Grid.RowDefinitions>

        <!--#region 전체 중 상단 -->
        <Grid Grid.Row="0" Margin="2" Background="{DynamicResource WizMes_SungShinNQ}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblDay" Grid.Column="0" Background="WhiteSmoke" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="1" MouseLeftButtonDown="lblDay_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkDay" Click="chkDay_Click" VerticalAlignment="Center" IsEnabled="False"/>
                        </Viewbox>
                        <TextBlock Text="작 업 일" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpSDate" Grid.Column="1" Margin="1" VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="dtpEDate" Grid.Column="1" Margin="1" VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnLastMonth" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전월" Margin="1" Click="btnLastMonth_Click"/>
                <Button x:Name="btnThisMonth" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금월" Margin="1" Click="btnThisMonth_Click" />
                <Button x:Name="btnYesterDay" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전일" Margin="1" Click="btnYesterDay_Click"/>
                <Button x:Name="btnToday" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금일" Margin="1" Click="btnToday_Click"/>
            </Grid>
            <Label x:Name ="lblDefectWork" Grid.Column="1" Grid.Row="3" Margin="1" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" MouseLeftButtonUp="lblDefectWork_MouseLeftButtonUp">
                <StackPanel Orientation="Horizontal" Margin="1">
                    <Viewbox>
                        <CheckBox x:Name="chkDefectWork" />
                    </Viewbox>
                    <TextBlock Text="생산불량 발생건만" />
                </StackPanel>
            </Label>
            <!--<Border x:Name="brDefectWork" Grid.Row="3" Background="#ededed" Margin="2" 
                    BorderBrush="Gray" BorderThickness="1" 
                    MouseLeftButtonDown="brDefectWork_MouseLeftButtonDown">                
            </Border>-->

            <!--최종거래처-->
            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lbInInCustom" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" MouseLeftButtonUp="lbInCustom_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkInCustom" Checked="chkInCustom_Checked" Unchecked="chkInCustom_Unchecked" VerticalAlignment="Center" />
                        </Viewbox>
                        <TextBlock Text="최종거래처" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>

                <TextBox x:Name="txtInCustom" Grid.Column="1" Margin="1" IsEnabled="False" KeyDown="txtInCustom_KeyDown" />
                <Button x:Name="btnPfInCustom" Grid.Column="2" Margin="1" IsEnabled="False" Click="btnPfInCustom_Click">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" />
                </Button>
            </Grid>
            
            <Grid Grid.Column="2" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblCustom" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" MouseLeftButtonDown="lblCustom_MouseLeftButtonDown" >
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkCustom" Click="chkCustom_Click" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text="거 래 처" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtCustomSeach" Grid.Column="1" Margin="1" IsEnabled="False" KeyDown="txtCustomSeach_KeyDown"/>
                <Button x:Name="btnPfCustom" Grid.Column="2" Margin="1" IsEnabled="False" Click="btnPfCustom_Click">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" />
                </Button>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticle" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" MouseLeftButtonDown="lblArticle_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkArticle" Click="chkArticle_Click" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text="품     명" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtArticleSearch" Grid.Column="1" Margin="1" IsEnabled="False" KeyDown="txtArticleSearch_KeyDown"/>
                <Button x:Name="btnPfArticle" Grid.Column="2" Margin="1" IsEnabled="False" Click="btnPfArticle_Click">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" />
                </Button>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="2" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblOrder" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" MouseLeftButtonDown="lblOrder_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkOrder" Click="chkOrder_Click" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock x:Name="tbkOrder" Text="관리번호" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtOrderSearch" Grid.Column="1" Margin="1" IsEnabled="False"/>
            </Grid>
            <!-- 작업자 추가 -->
            <Grid Grid.Column="2" Grid.Row="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblWorkerName" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" MouseLeftButtonDown="lblWorkerName_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkWorkerName" Click="chkWorkerName_Click" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock x:Name="tbkWorkerName" Text="작 업 자" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtWorkerNameSearch" Grid.Column="1" Margin="1" IsEnabled="False"
                         KeyDown="txtWorkerNameSearch_KeyDown"/>
            </Grid>
           

            <Grid Grid.Column="3" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticleNo" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" MouseLeftButtonDown="lblArticleNo_MouseLeftButtonDown"
                       Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkArticleNo" Click="chkArticleNo_Click" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text="품     명" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtArticleNoSearch" Grid.Column="1" Margin="1" IsEnabled="False"
                         KeyDown="txtArticleNoSearch_KeyDown" Visibility="Hidden"/>
            </Grid>
            <Grid Grid.Column="3" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblProcess" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkProcess" VerticalAlignment="Center" IsChecked="True" IsEnabled="False"/>
                        </Viewbox>
                        <TextBlock Text="공 정 명" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboProcessSearch" Grid.Column="1" Margin="1" IsEnabled="True" Background="White"
                          SelectionChanged="cboProcessSearch_SelectionChanged"/>
            </Grid>
            <Grid Grid.Column="3" Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblMachine" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" >
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkMachine" VerticalAlignment="Center" IsEnabled="False" IsChecked="True"/>
                        </Viewbox>
                        <TextBlock Text="호     기" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboMachineSearch" Grid.Column="1" Margin="1" IsEnabled="True" Background="White"/>
            </Grid>
            <Grid Grid.Column="3" Grid.Row="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblGubun" Grid.Column="0" Margin="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" MouseLeftButtonDown="lblGubun_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkGubun" Click="chkGubun_Click" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text="작업구분" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboGubunSearch" Grid.Column="1" Margin="1" IsEnabled="False" Background="White"/>
            </Grid>

            <Grid Grid.Column="4" Grid.RowSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnSearch" Grid.Column="0" Margin="1" Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnUpdate" Grid.Column="1" Margin="1" Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnDelete" Grid.Column="2" Margin="1" Click="btnDelete_Click" Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiDelete}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblDelete},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnClose" Grid.Column="3" Margin="1" Click="btnClose_Click" >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnSave" Grid.Column="1" Margin="1" Click="btnSave_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnCancel" Grid.Column="2" Margin="1" Click="btnCancel_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnExcel" Grid.Column="3" Margin="1" Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button> 
                </Grid>
                <Grid Grid.Row="2" Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnRefresh" Grid.Column="3" Margin="1" Click="btnRefresh_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiRefresh}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblRefreshUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <!--#endregion-->

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.85*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1.15*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <DataGrid x:Name="dgdResult" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" 
                          SelectionChanged="dgdResult_SelectionChanged" Style="{DynamicResource DataGridSet1}">
                    <DataGrid.Columns>

                        <DataGridTemplateColumn Header="순" Width="auto" SortMemberPath="Num">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Num}" Padding="3 0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="거래처명" Width="auto" SortMemberPath="KCustom">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding KCustom}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="품번" Width="auto" SortMemberPath="BuyerArticleNo">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding BuyerArticleNo}" Padding="3 0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="품명" Width="auto" SortMemberPath="Article">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Article}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="작업자" Width="auto" SortMemberPath="Worker">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Worker}" Padding="5 0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="이동전표번호" Width="auto" SortMemberPath="LabelID">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding LabelID}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="수량" Width="auto" SortMemberPath="WorkQty">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkQty}" TextAlignment="Right"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="작업시작" Width="auto" SortMemberPath="WorkStartDate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkStartDate}" Padding="3 0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="작업완료" Width="auto" SortMemberPath="WorkEndDate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkEndDate}" Padding="3 0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="시작시간" Width="auto" SortMemberPath="WorkStartTime">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkStartTime}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="종료시간" Width="auto" SortMemberPath="WorkEndTime">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkEndTime}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="작업시간(Min)" Width="auto" SortMemberPath="WorkMinute">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkMinute}" TextAlignment="Right"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn x:Name="dgtOrderNo" Header="Order No." Width="auto" Visibility="Hidden">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OrderNo}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn x:Name="dgtOrderID" Header="관리번호" Width="auto" SortMemberPath="OrderID">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OrderID}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid x:Name="dgdResultCount" Grid.Row="1" 
                          LoadingRow="dgdResultCount_LoadingRow" IsEnabled="False" Style="{DynamicResource DataGridSet1}">
                    <DataGrid.Columns>
                        <!--<DataGridTemplateColumn Header="구분" Width="auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ctGubun }" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>-->
                        <DataGridTemplateColumn Header="건수" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkCnt }" TextAlignment="Right"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="총수량" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkQty}" TextAlignment="Right"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="시간(Hour)" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkHour}" TextAlignment="Right"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Row="2" Width="auto" Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="rbnOrderNo" Grid.Column="0" Margin="5,2,5,2" 
                                         Content="Order No." Click="rbnOrderNo_Click" />
                            <RadioButton x:Name="rbnOrderID" Grid.Column="1" Margin="5,2,5,2" 
                                         Content="관리 번호" IsChecked="True" Click="rbnOrderID_Click"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext" />
            <Grid Grid.Column="2" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="22*" />
                    <RowDefinition Height="505*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblMsg" BorderBrush="Black" BorderThickness="1" Background="Yellow" HorizontalContentAlignment="Center" Margin="1" Visibility="Hidden">
                        <TextBlock x:Name="tbkMsg" Text="자료 수정 중" />
                    </Label>
                </Grid>
                <GroupBox Grid.Row="1" Margin="1" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75*" />
                            <ColumnDefinition Width="150*" />
                            <ColumnDefinition Width="15*" />
                            <ColumnDefinition Width="75*" />
                            <ColumnDefinition Width="75*" />
                            <ColumnDefinition Width="75*" />
                            <ColumnDefinition Width="15*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />

                            <RowDefinition Height="22*" />
                            <RowDefinition Height="270*" />
                        </Grid.RowDefinitions>                       
                        
                        <!-- 0 Row -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Order No." HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtOrderNo" Grid.Row="0" Grid.Column="1" Margin="1" 
                                 Text="{Binding OrderNo}" IsEnabled="False"/>

                        <Label Grid.Row="0" Grid.Column="3" Content="작 업 조" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <ComboBox x:Name="cboDayOrNight" Grid.Row="0" Grid.Column="4" Margin="1" 
                                      SelectedValue="{Binding DayOrNightID}" IsEnabled="False" Background="White"/>

                        <!-- 1 Row -->
                        <Label Focusable="True" Grid.Row="1" Grid.Column="0" Content="관리 번호" 
                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtOrderID" Grid.Row="1" Grid.Column="1" Margin="1" 
                                 Text="{Binding OrderID}" IsEnabled="False"/>

                        <Label Grid.Row="1" Grid.Column="3" Content="CycleTime" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtCT" Grid.Row="1" Grid.Column="4" Margin="1" 
                                 Text="{Binding CycleTime}" IsEnabled="False" PreviewTextInput="txtCT_PreviewTextInput"/>

                        <!-- 2 Row -->
                        <Label Grid.Row="2" Grid.Column="0" Content="납품거래처" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtCustom" Grid.Row="2" Grid.Column="1" Margin="1" 
                                 Text="{Binding KCustom}" Tag="{Binding CustomID}" IsEnabled="False"/>

                        <Label Grid.Row="2" Grid.Column="3" Content="합격수량" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtQty" Grid.Row="2" Grid.Column="4" Margin="1" 
                                 Text="{Binding WorkQty}" IsEnabled="False" PreviewTextInput="txtQty_PreviewTextInput"/>

                        <!-- 3 Row -->
                        <Label Grid.Row="4" Grid.Column="0" Content="품     번" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox Grid.Row="4" x:Name="txtArticleNo" Grid.Column="1" Margin="1" 
                                 Text="{Binding BuyerArticleNo}" IsEnabled="False"/>
                       

                        <Label Grid.Row="3" Grid.Column="3" Content="생산일자" HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center" Margin="1"/>
                        <DatePicker Grid.Row="3" x:Name="dtpProdDate" Grid.Column="4" SelectedDate="{Binding dtScanDate}" 
                                    Text="{Binding ScanDate_CV}" IsEnabled="False"/>
                        <TextBox Grid.Row="3" x:Name="txtProdScanTime" Grid.Column="5" IsEnabled="False"
                                 Text="{Binding ScanTime,StringFormat=HH:mm:ss}" PreviewTextInput="txtProdScanTime_PreviewTextInput"/>

                        <!-- 4 Row -->
                        <Label Grid.Row="3" Grid.Column="0" Content="품     명" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtArticle" Grid.Row="3" Grid.Column="1" Margin="1" 
                                 Text="{Binding Article}" Tag="{Binding Articleid}" IsEnabled="False"/>

                        <Label Grid.Row="4" Grid.Column="3" Content="공     정" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <ComboBox Grid.Row="4" x:Name="cboProcess" Grid.Column="4" Margin="1" 
                                      SelectedValue="{Binding ProcessID}" IsEnabled="False"/>

                        <!-- 5 Row -->
                        <Label Grid.Row="5" Grid.Column="0" Content="규     격" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtSpec" Grid.Row="5" Grid.Column="1" Margin="1" Text="{Binding Spec}" 
                                 IsEnabled="False"/>

                        <Label Grid.Row="5" Grid.Column="3" Content="호     기" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <ComboBox Grid.Row="5" x:Name="cboMachine" Grid.Column="4" Margin="1" 
                                  SelectedValue="{Binding MachineID}" IsEnabled="False" Background="White"/>

                        <!-- 6 Row -->
                        <Label Grid.Row="6" Grid.Column="0" Content="차     종" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtModel" Grid.Row="6" Grid.Column="1" Margin="1" 
                                 Text="{Binding BuyerModel}" Tag="{Binding BuyerModelID}" IsEnabled="False"/>

                        <Label Grid.Row="6" Grid.Column="3" Content="작업일시" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <DatePicker Grid.Row="6" x:Name="dtpWorkStartDate" Grid.Column="4" Margin="1" IsEnabled="False"
                                        SelectedDate="{Binding WorkStartDate_CV}" Text="{Binding WorkStartDate}"/>
                        <TextBox Grid.Row="6" x:Name="txtStartTime" Grid.Column="5" IsEnabled="False"
                                 Margin="1" Text="{Binding WorkStartTime, StringFormat=HH:mm:ss}" PreviewTextInput="txtStartTime_PreviewTextInput" TextChanged="txtStartTime_TextChanged"/>

                        <TextBlock Grid.Row="7" Grid.Column="3" Margin="1" Text="~" HorizontalAlignment="Right" />
                        <DatePicker Grid.Row="7" x:Name="dtpWorkEndDate" Grid.Column="4" Margin="1" IsEnabled="False" SelectedDate="{Binding WorkEndDate_CV}" Text="{Binding WorkEndDate}" />
                        <TextBox Grid.Row="7" x:Name="txtEndTime" Grid.Column="5" Margin="1" IsEnabled="False" Text="{Binding WorkEndTime,StringFormat=HH:mm:ss}" PreviewTextInput="txtEndTime_PreviewTextInput" TextChanged="txtEndTime_TextChanged"/>

                        <!-- 7 Row -->
                        <Label Grid.Row="7" Grid.Column="0" Content="총 주문량" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtOrderQty" Grid.Row="7" Grid.Column="1" Margin="1" 
                                 Text="{Binding OrderQty}" IsEnabled="False" Style="{StaticResource InputCommaZeroTextBoxNoRight}"/>
                       

                        <!-- 8 Row -->
                        <Label Grid.Row="8" Grid.Column="0" Content="작지번호" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtInstID" Grid.Row="8" Grid.Column="1" Margin="1" 
                                 Text="{Binding InstID}" IsEnabled="False"/>

                        <Label Grid.Row="8" Grid.Column="3" Content="작업시간" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox Grid.Row="8" x:Name="txtWorkMinute" Grid.Column="4" Style="{StaticResource InputCommaZeroTextBoxNoRight}"
                                 Margin="1" Text="{Binding WorkHour}" IsEnabled="False"/>

                        <!-- 9 Row -->
                        <Label Grid.Row="9" Grid.Column="0" Content="공정이동전표번호" 
                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox x:Name="txtBoxID" Grid.Row="9" Grid.Column="1" Margin="1" 
                                 Text="{Binding LabelID}" IsEnabled="False"/>

                        <Label Grid.Row="9" Grid.Column="3" Content="작 업 자" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox Grid.Row="9" Grid.Column="4" Margin="1" x:Name="txtWorker"
                                 Text="{Binding Worker}" Tag="{Binding WorkPersonID}" IsEnabled="False" KeyDown="txtWorker_KeyDown"/>
                        <Grid Grid.Row="9" Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="20*" />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnPfWorker" Margin="1" IsEnabled="False" Click="btnPfWorker_Click">
                                <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" />
                            </Button>
                        </Grid>
                        
                        <!-- 10 Row -->
                        <Label Grid.Row="10" Grid.Column="0" Content="무작업사유" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <TextBox Grid.Row="10" Grid.Column="1" Margin="1" 
                                 Text="{Binding NoReworkName}" IsEnabled="False"/>

                        <Label Grid.Row="10" Grid.Column="3" Content="작업구분" HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" Margin="1"/>
                        <ComboBox Grid.Row="10" x:Name="cbGubun" Grid.Column="4" Margin="1" 
                                  SelectedValue="{Binding JobGbn}" Background="White" IsEnabled="False"/>

                        <Grid Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2" Margin="1" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="※하위결합정보" Margin="2"/>
                            <DataGrid x:Name="dgdResultChild" Grid.Row="1"  IsEnabled="False" Style="{DynamicResource DataGridSet1}"
                                      >
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="라벨ID" Width="*" MinWidth="100" SortMemberPath="ChildLabelID">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ChildLabelID}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="품명" Width="*" MinWidth="100" SortMemberPath="ChildArticleID">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ChildArticleID}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="품명ID" Width="*" Visibility="Hidden" MinWidth="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Article}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Row="14" Grid.Column="3" Grid.ColumnSpan="3" Margin="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="※불량정보" Margin="2"/>
                            <DataGrid x:Name="dgdResultDefect" Grid.Row="1"  IsEnabled="False" Style="{DynamicResource DataGridSet1}" >
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="불량ID" Width="*" MinWidth="100" Visibility="Hidden" IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DefectID}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="불량명" Width="*" MinWidth="100" SortMemberPath="KDefect">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding KDefect}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="불량수량" Width="*" MinWidth="100" SortMemberPath="DefectCount">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DefectCount}" TextAlignment="Right"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
        <!-- //전체 중 오른쪽 -->
    </Grid>
</UserControl>
