<UserControl x:Class="WizMes_SungShinNQ.Win_prd_Warning_S"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_SungShinNQ"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="2" Background="{DynamicResource WizMes_SungShinNQ}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblDateSrh" Grid.Column="0" VerticalContentAlignment="Center" MouseLeftButtonDown="lblDateSrh_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox>
                            <CheckBox x:Name="chkDateSrh" Checked="chkDateSrh_Checked" Unchecked="chkDateSrh_Unchecked" VerticalAlignment="Center"/>
                        </Viewbox>
                        <TextBlock Text="일자" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpSDate" Grid.Column="1" Padding="0" IsEnabled="False"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="dtpEDate" Grid.Column="1" Padding="0" IsEnabled="False"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="42*" />
                    <ColumnDefinition Width="42*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnLastMonth" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="btnLastMonth_Click">
                    <TextBlock Text="전월" Margin="-2"/>
                </Button>
                <Button x:Name="btnThisMonth" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click= "btnThisMonth_Click">
                    <TextBlock Text="금월" Margin="-2"/>
                </Button>
            </Grid>

           
            <Grid Grid.Column="4" Grid.RowSpan="4" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnSearch" Grid.Column="1" Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnExcel" Grid.Column="2" Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnClose" Grid.Column="3" Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <GroupBox Header="툴 교체주기">
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dgdTool" Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="순" Binding="{Binding Num, StringFormat=N0}"></DataGridTextColumn>
                            <DataGridTextColumn Header="툴" Binding="{Binding MCPartName, StringFormat=N0}"></DataGridTextColumn>
                            <DataGridTextColumn Header="최종 교체일" Binding="{Binding ChangeDate}"></DataGridTextColumn>
                            <DataGridTextColumn Header="사용횟수" Binding="{Binding UseQty, StringFormat=N0}"></DataGridTextColumn>
                            <DataGridTextColumn Header="수명한계(%)" Binding="{Binding PerProdQty, StringFormat=N0}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid x:Name="dgdToolSum" Grid.Row="1" Style="{DynamicResource DataGridSet1}" Margin="0,0,553,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="합계" Binding="{Binding UseQty, StringFormat=N0}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                            <DataGridTextColumn Header="수량" Binding="{Binding Num}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="2" Text="※ 툴 수명 90% 사용건을 조회"></TextBlock>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1" Header="원부자재 재고 부족">
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dgdStock" Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="순" Binding="{Binding NUM, StringFormat=N0}" CellStyle="{DynamicResource DataGridCellAndCentering}"></DataGridTextColumn>
                            <DataGridTextColumn Header="품명" Binding="{Binding Article}" CellStyle="{DynamicResource DataGridCellAndCentering}"></DataGridTextColumn>
                            <DataGridTextColumn Header="품번" Binding="{Binding BuyerArticleNo}" CellStyle="{DynamicResource DataGridCellAndCentering}"></DataGridTextColumn>
                            <DataGridTextColumn Header="수량" Binding="{Binding StockQty, StringFormat=N0}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                            <DataGridTextColumn Header="단위" Binding="{Binding UnitClssName}" CellStyle="{DynamicResource DataGridCellAndCentering}"></DataGridTextColumn>
                            <DataGridTextColumn Header="적정재고" Binding="{Binding NeedstockQty, StringFormat=N0}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                            <DataGridTextColumn Header="부족량" Binding="{Binding OverQty, StringFormat=N0}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                            <DataGridTextColumn Header="부족비율(%)" Binding="{Binding StockRate, StringFormat=N0}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid x:Name="dgdStockSum" Grid.Row="1" Style="{DynamicResource DataGridSet1}" Margin="0,0,553,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="합계" Binding="{Binding StockQty, StringFormat=N0}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                            <DataGridTextColumn Header="건수" Binding="{Binding NUM, StringFormat=N0}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                            <DataGridTextColumn Header="부족량" Binding="{Binding OverQty, StringFormat=N0}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                            <DataGridTextColumn Header="부족비율(%)" Binding="{Binding NeedstockQty, StringFormat=N0}" CellStyle="{DynamicResource NumericDataGridCell}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="2" Text="※ 적정재고 부족분 조회"></TextBlock>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
