<UserControl x:Class="WizMes_SungShinNQ.Win_prd_LotDetail_Q"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_SungShinNQ"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid>
        <!--상하 레이아웃 나누기-->
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        
        <!--상단 레이아웃-->
        <!--상단 레이아웃 배경-->
        <Grid Grid.Row="0" Margin="2" Background="{DynamicResource WizMes_SungShinNQ}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="100*" />
            </Grid.ColumnDefinitions>
            
            <!--생산일-->
            <Grid Grid.Column="1" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblDate" Grid.Column="0" Margin="1" MouseLeftButtonUp="lblDate_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkDate" Checked="chkDate_Checked" 
                                      Unchecked="chkDate_Unchecked" IsChecked="True"/>
                        </Viewbox>
                        <TextBlock Text=" 생산일" VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpSDate" Grid.Column="1" Margin="1" IsEnabled="True"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="dtpEDate" Grid.Column="1" Margin="1" IsEnabled="True"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnLastMonth" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전월" Margin="1" Click="btnLastMonth_Click"/>
                <Button x:Name="btnThisMonth" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금월" Margin="1" Click="btnThisMonth_Click" />
                <Button x:Name="btnYesterDay" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전일" Margin="1" Click="btnYesterDay_Click"/>
                <Button x:Name="btnToday" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금일" Margin="1" Click="btnToday_Click"/>
            </Grid>
            
            <!--제품라벨-->
            <Grid Grid.Column="2" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblLabel" Grid.Column="0" Margin="1" MouseLeftButtonUp="lblLabel_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkLabel" Checked="chkLabel_Checked" Unchecked="chkLabel_Unchecked"/>
                        </Viewbox>
                        <TextBlock x:Name="tbkLabel" Text=" 제품 라벨" />
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtSLabel" Grid.Column="1" Margin="1" IsEnabled="False"/>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Margin="1" Text="~ " HorizontalAlignment="Right" />
                <TextBox x:Name="txtELabel" Grid.Column="1" Margin="1" IsEnabled="False"/>
            </Grid>
            
            <!--4M 번호-->
            <Grid Grid.Column="2" Grid.Row="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lbl4Mnumber" Grid.Column="0" Margin="1" MouseLeftButtonUp="lbl4Mnumber_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chk4Mnumber" Checked="chk4Mnumber_Checked" Unchecked="chk4Mnumber_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text=" 4M 번호" />
                    </StackPanel>
                </Label>
                <TextBox x:Name="txt4Mnumber" Grid.Column="1" Margin="1" IsEnabled="False"/>
            </Grid>
            
            <!--제품, 자재로트,하위제품 고객라벨-->
            <Grid Grid.Column="3" Grid.Row="0" Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="190*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Margin="1" Background="#ededed" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <RadioButton x:Name="rbnArticle" Content=" 제품" Margin="1" 
                                     VerticalAlignment="Center" Click="rbnArticle_Click"/>
                        <RadioButton x:Name="rbnArticleChild" Content=" 자재로트,하위제품" Margin="1" 
                                     VerticalAlignment="Center" Click="rbnArticleChild_Click" IsChecked="True"/>
                        <RadioButton x:Name="rbnCustomLabel" Content=" 고객라벨" Margin="1" 
                                     VerticalAlignment="Center" Click="rbnCustomLabel_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!--우측 버튼 모음-->
            <Grid Grid.Column="4" Grid.Row="0" Grid.RowSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnSearch" Grid.Column="0" Margin="1" Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnClose" Grid.Column="1" Margin="1" Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnExcel" Grid.Column="1" Margin="1" Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        
        <!--하단 레이아웃-->
        <Grid Grid.Row="1" >
            <!--하단 레이아웃 나누기-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
            <!--데이터그리드-->
            <DataGrid x:Name="dgdBoxID" Grid.Row="0" SelectionChanged="dgdBoxID_SelectionChanged" Style="{DynamicResource DataGridSet1}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="순번" Binding="{Binding Num}" />
                    <DataGridTextColumn Header="라벨" Binding="{Binding LabelID}" />
                    <DataGridTextColumn Header="BoxID" Binding="{Binding RelLabelID}" Visibility="Hidden"/>
                    <DataGridTextColumn Header="품명" Binding="{Binding Article}" />
                    <DataGridTextColumn Header="품번" Binding="{Binding BuyerArticleNo}" />
                    <DataGridTextColumn Header="생산일자" Binding="{Binding WorkDate}" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock x:Name="tbkCount" Grid.Row="1" VerticalAlignment="Center" Text="▶ 검색 결과 : "/>
            </Grid>
            <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext" />
            
            <!--오른쪽 하단 레이아웃-->
            <Grid Grid.Column="2" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <!--상단 텍스트박스 모음-->
                <Border Grid.Row="0" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="8*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="210*" />
                            <ColumnDefinition Width="210*" />
                            <ColumnDefinition Width="210*" />
                            <ColumnDefinition Width="10*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60*" />
                                <ColumnDefinition Width="105*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="85*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1" Content="라     벨" />
                            <TextBox Grid.Column="1" Grid.ColumnSpan="4" Margin="1" Background="GreenYellow" Text="{Binding LabelID}" IsReadOnly="True"/>
                        </Grid>

                        <Grid Grid.Row="2" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="105*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1" Content="품     번" />
                            <TextBox Grid.Column="1" Margin="1" IsReadOnly="True" Text="{Binding BuyerArticleNo}"/>
                        </Grid>

                        <Grid Grid.Row="3" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="105*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1" Content="품     명" />
                            <TextBox Grid.Column="1" Margin="1" IsReadOnly="True" Text="{Binding Article}"/>
                        </Grid>

                        <Grid Grid.Row="4" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="105*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1" Content="규     격" />
                            <TextBox Grid.Column="1" Margin="1" IsReadOnly="True" Text="{Binding Spec}"/>
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="2" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Margin="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="4M번호" />
                            <TextBox Grid.Column="1" Margin="1" IsReadOnly="True" Text="{Binding FourMID}"/>
                        </Grid>

                        <Grid Grid.Row="2" Grid.Column="0" Visibility="Hidden">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1" Content="품명코드" />
                            <TextBox Grid.Column="1" Margin="1" IsReadOnly="True" Text="{Binding ArticleID}"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="85*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1">
                                <TextBlock x:Name="tbkOrder" Text="Order No." VerticalAlignment="Center"/>
                            </Label>
                            <TextBox Grid.Column="1" Margin="1" IsReadOnly="True" Text="{Binding OrderNo}"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1" Content="고객라벨" />
                            <TextBox Grid.Column="1" Margin="1" IsReadOnly="True" Text="{Binding CustomBoxID}"/>
                        </Grid>

                        <Grid Grid.Row="3" Grid.Column="0" Visibility="Hidden">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1" Content="상 태"/>
                            <TextBox Grid.Column="1" Margin="1" />
                        </Grid>
                        
                        <Grid Grid.Row="3" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="85*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1" >
                                <TextBlock x:Name="tbkOrderID" Text="관리번호" VerticalAlignment="Center"/>
                            </Label>
                            <TextBox Grid.Column="1" Margin="1" IsReadOnly="True" Text="{Binding OrderID}"/>
                        </Grid>
                        
                      
                        <Grid Grid.Row="4" Grid.Column="0" Visibility="Hidden">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="190*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="상태 : 입고, 생산, 상위에 투입, 출고" Margin="1" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <Grid Grid.Row="4" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="85*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1">
                                <TextBlock x:Name="tbkplID" Text="작업지시번호" VerticalAlignment="Center"/>
                            </Label>
                            <TextBox Grid.Column="1" Margin="1" IsReadOnly="True" Text="{Binding InstID}"/>
                        </Grid>
                        
                      
                    </Grid>
                </Border>
                
                <!--작업정보 데이터그리드-->
                <GroupBox Grid.Row="1" Margin="1" Header="작업정보">
                    <DataGrid x:Name="dgdWork" IsReadOnly="True" Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="순" Binding="{Binding Num}" />
                            <DataGridTextColumn Header="일자" Width="auto" Binding="{Binding WorkDate}"/>
                            <DataGridTextColumn Header="시간" Width="auto" Binding="{Binding WorkTime}"/>
                            <DataGridTextColumn Header="공정" Width="auto" Binding="{Binding Process}"/>
                            <DataGridTextColumn Header="호기" Width="auto" Binding="{Binding Machine}"/>
                            <DataGridTextColumn Header="수량" Width="auto" Binding="{Binding WorkQty}" CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="작업자" Width="auto" Binding="{Binding WorkManName}"/>
                            <DataGridTextColumn Header="비고" Width="auto" Binding="{Binding Remark}"/>
                            <DataGridTextColumn Header="필요자격" Width="auto" Binding="{Binding HrLicence}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                
                <!--하위결합정보 데이터그리드-->
                <GroupBox Grid.Row="2" Margin="1" Header="하위결합정보">
                    <DataGrid x:Name="dgdChild" Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="순" Width="auto" Binding="{Binding Num}"/>
                            <DataGridTextColumn Header="라벨ID" Width="auto" Binding="{Binding ChildLabelID}"/>
                            <DataGridTextColumn Header="품명코드" Width="auto" Binding="{Binding ChildArticleID}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="품번" Width="auto" Binding="{Binding BuyerArticleNo}"/>
                            <DataGridTextColumn Header="품명" Width="auto" Binding="{Binding Article}"/>
                            <DataGridTextColumn Header="구분" Width="auto" Binding="{Binding Gubun}"/>
                            <DataGridTextColumn Header="일자" Width="auto" Binding="{Binding InDate}"/>
                            <DataGridTextColumn Header="시간" Width="auto" Binding="{Binding InTime}" />
                            <DataGridTextColumn Header="수량" Width="auto" Binding="{Binding Qty}" CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="거래처" Width="auto" Binding="{Binding Custom}"/>
                            <DataGridTextColumn Header="작업자" Width="auto" Binding="{Binding InPersonName}" />
                            <DataGridTextColumn Header="현재고" Width="auto" Binding="{Binding StockQty}" CellStyle="{StaticResource NumericDataGridCell}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                
            </Grid>

        </Grid>
        
    </Grid>
</UserControl>
