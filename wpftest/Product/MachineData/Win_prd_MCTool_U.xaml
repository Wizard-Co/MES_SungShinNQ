                                    <DataTemplate>
                                        <TextBlock Text="{Binding Num}" Padding="3 0" 
                                                       MouseLeftButtonDown="dgtcSelProduct_MouseLeftButtonDown"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="품번" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding BuyerArticleNo}" Padding="3 0" 
