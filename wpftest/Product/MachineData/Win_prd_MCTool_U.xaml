                                        <TextBlock Text="{Binding Num}" Padding="3 0" 
                                                       MouseLeftButtonDown="dgtcAllMC_MouseLeftButtonDown"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="설비명" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding MCNAME}" Padding="3 0" 
                                                   MouseLeftButtonDown="dgtcAllMC_MouseLeftButtonDown"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Column="5" Grid.Row="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button x:Name="btnRight2" Grid.Row="2" Style="{DynamicResource btnInNoViewBox}" Margin="1" Click="btnRight2_Click">
                            <Image Source="{DynamicResource btiAddRight}" Width="10" Height="10" IsEnabled="False"/>
                        </Button>
                        <Button x:Name="btnLeft2" Grid.Row="3" Style="{DynamicResource btnInNoViewBox}" Margin="1" Click="btnLeft2_Click">
                            <Image Source="{DynamicResource btiAddLeft}" Width="10" Height="10" IsEnabled="False"/>
                        </Button>
                    </Grid>
                    <DataGrid x:Name="dgdselProcess" Grid.Row="1" Grid.Column="6" Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header=" ">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Num}" Padding="3 0" 
                                                       MouseLeftButtonDown="dgtcSelMC_MouseLeftButtonDown"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="설비명" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding MCNAME}" Padding="3 0" 
                                                   MouseLeftButtonDown="dgtcSelMC_MouseLeftButtonDown"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
