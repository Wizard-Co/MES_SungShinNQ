<UserControl
    x:Class="WizMes_SungShinNQ.Win_prd_PartStuffin_U"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WizMes_SungShinNQ"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="620"
    d:DesignWidth="820"
    Loaded="Usercontrol_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Margin="2"
            Background="{DynamicResource WizMes_SungShinNQ}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="130*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>


            <Label
                x:Name="lblRemainAddSrh"
                Grid.Row="3"
                Grid.Column="0"
                Margin="10,0,10,0"
                VerticalContentAlignment="Center"
                MouseLeftButtonUp="lblRemainAddSrh_MouseLeftButtonUp"
                Visibility="Hidden">
                <StackPanel Margin="-2" Orientation="Horizontal">
                    <Viewbox>
                        <CheckBox x:Name="chkRemainAddSrh" />
                    </Viewbox>
                    <TextBlock Text="유지추가" />
                </StackPanel>
            </Label>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblInDay"
                    Grid.Column="0"
                    MouseLeftButtonUp="lblInDay_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkInDay"
                                VerticalAlignment="Center"
                                Checked="chkInDay_Checked"
                                IsChecked="False"
                                Unchecked="chkInDay_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 입고 일자" />
                    </StackPanel>
                </Label>
                <DatePicker
                    x:Name="dtpSDate"
                    Grid.Column="1"
                    Padding="0"
                    IsEnabled="False" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker
                    x:Name="dtpEDate"
                    Grid.Column="1"
                    Padding="0"
                    IsEnabled="False" />
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnLastMonth"
                    Grid.Column="0"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnLastMonth_Click"
                    Content="전월" />
                <Button
                    x:Name="btnThisMonth"
                    Grid.Column="1"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnThisMonth_Click"
                    Content="금월" />
                <Button
                    x:Name="btnYesterDay"
                    Grid.Column="2"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnYesterDay_Click"
                    Content="전일" />
                <Button
                    x:Name="btnToday"
                    Grid.Column="3"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnToday_Click"
                    Content="금일" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblCustomSearch"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblCustomSearch_MouseLeftButtonUP">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkCustomSearch"
                                VerticalAlignment="Center"
                                Checked="chkCustomSearch_Checked"
                                Unchecked="chkCustomSearch_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 거 래 처" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtCustomSearch"
                    Grid.Column="1"
                    Padding="0"
                    IsEnabled="False"
                    KeyDown="txtCustomSearch_KeyDown" />
                <Button
                    x:Name="btnPfCustomSearch"
                    Grid.Column="2"
                    Click="btnPfCustomSearch_Click"
                    IsEnabled="False">
                    <Image Margin="-2" Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblArticleSearch"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblArticleSearch_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkArticleSearch"
                                VerticalAlignment="Center"
                                Checked="chkArticleSearch_Checked"
                                Unchecked="chkArticleSearch_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 부 품 명" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtArticleSearch"
                    Grid.Column="1"
                    Padding="0"
                    IsEnabled="False"
                    KeyDown="txtArticleSearch_KeyDown" />
                <Button
                    x:Name="btnPfArticleSearch"
                    Grid.Column="2"
                    Click="btnPfArticleSearch_Click"
                    IsEnabled="False">
                    <Image Margin="-2" Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*" />
                    <ColumnDefinition Width="34*" />
                    <ColumnDefinition Width="49*" />
                    <ColumnDefinition Width="54*" />
                    <ColumnDefinition Width="22*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblForUseSrh"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblForUseSrh_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox Visibility="Hidden">
                            <CheckBox x:Name="chkForUseSrh" VerticalAlignment="Center" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 부품용도" />
                    </StackPanel>
                </Label>
                <ComboBox
                    x:Name="cboForUseSrh"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Padding="0"
                    Background="White" />
            </Grid>

            <Grid
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnAdd"
                        Grid.Column="0"
                        Click="btnAdd_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiInsert}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblInsert}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnUpdate"
                        Grid.Column="1"
                        Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiUpdate}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblUpdate}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnDelete"
                        Grid.Column="2"
                        Click="btnDelete_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiDelete}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblDelete}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Grid.Column="3"
                        Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiClose}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblClose}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnSearch"
                        Grid.Column="0"
                        Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSearch}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSearch}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnSave"
                        Grid.Column="1"
                        Click="btnSave_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSave}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSave}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnCancel"
                        Grid.Column="2"
                        Click="btnCancel_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiCancle}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblCancle}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnExcel"
                        Grid.Column="3"
                        Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiExcel}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblExcel}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <DataGrid
                    x:Name="dgdGroup"
                    Grid.Row="0"
                    SelectionChanged="dgdGroup_SelectionChanged"
                    Style="{DynamicResource DataGridSet1}">
                    <!--FrozenColumnCount="5"-->
                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="auto"
                            Header="순번"
                            SortMemberPath="Num">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding Num}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="auto"
                            Header="사업장"
                            Visibility="Hidden">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding KCompany}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="auto"
                            Header="입고일자"
                            SortMemberPath="StuffDate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding StuffDate}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                      

                        <DataGridTemplateColumn Header="거래처" SortMemberPath="CustomName">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding CustomName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="설비부품(예비품)코드" Visibility="Hidden">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding MCPartID}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Tool/예비품" SortMemberPath="MCPartName">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding MCPartName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="입고구분1" Visibility="Hidden">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding StuffClss}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Header="입고구분"
                            SortMemberPath="stuffName"
                            Visibility="Hidden">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding stuffName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="입고처명" SortMemberPath="Custom">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding Custom}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="auto"
                            Header="입고수량"
                            SortMemberPath="TotQty">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="1"
                                        Text="{Binding TotQty}"
                                        TextAlignment="Right" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="입고 단위" SortMemberPath="UnitClssName">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding UnitClssName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="단가" SortMemberPath="UnitPrice">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="1"
                                        Text="{Binding UnitPrice}"
                                        TextAlignment="Right" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="화폐 단위" SortMemberPath="PriceClssName">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding PriceClssName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="부가세 별도" SortMemberPath="Vat_Ind_YN">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding Vat_Ind_YN}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="환율" SortMemberPath="ExchRate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="1"
                                        Text="{Binding ExchRate}"
                                        TextAlignment="Right" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="금액" SortMemberPath="amount">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="1"
                                        Text="{Binding amount}"
                                        TextAlignment="Right" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="비고" SortMemberPath="Remark">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding Remark}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="입고번호" SortMemberPath="StuffInID">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding StuffInID}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="거래처ID" Visibility="Hidden">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding CustomID}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="단위ID" Visibility="Hidden">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="1" Text="{Binding PriceClss}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock
                    x:Name="tbkCount"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    Text="▶ 검색 결과 : " />
            </Grid>
            <GridSplitter
                Grid.Column="1"
                Width="5"
                ResizeBehavior="PreviousAndNext" />
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32*" />
                    <RowDefinition Height="500*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Margin="1"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            x:Name="lblMsg"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Yellow"
                            Visibility="Hidden">
                            <TextBlock
                                x:Name="tbkMsg"
                                Margin="-2"
                                Text="자료 입력 (추가)중" />
                        </Label>
                    </Grid>
                </Border>
                <Border
                    x:Name="bdrShowData"
                    Grid.Row="1"
                    IsEnabled="False">
                    <Grid x:Name="grdInput" Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95*" />
                            <ColumnDefinition Width="95*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="95*" />
                            <ColumnDefinition Width="95*" />
                            <ColumnDefinition Width="10*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="250*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="입고번호" />
                        </Label>
                        <TextBox
                            x:Name="txtStuffinID"
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="0"
                            Background="#c2fdc3"
                            IsReadOnly="True"
                            Text="{Binding StuffInID}" />

                        <Label
                            x:Name="lblDateUPD"
                            Grid.Row="1"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            MouseLeftButtonUp="lblDateUPD_MouseLeftButtonUp">
                            <StackPanel Margin="-2" Orientation="Horizontal">
                                <Viewbox>
                                    <CheckBox
                                        x:Name="chkDayUpdate"
                                        VerticalAlignment="Center"
                                        Checked="chkDayUpdate_Checked"
                                        KeyDown="chkDayUpdate_KeyDown"
                                        Unchecked="chkDayUpdate_Unchecked" />
                                </Viewbox>
                                <TextBlock VerticalAlignment="Center" Text=" 일자수정" />
                            </StackPanel>
                        </Label>
                        <DatePicker
                            x:Name="dtpDayUpdate"
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="0"
                            VerticalAlignment="Center"
                            CalendarClosed="dtpDayUpdate_CalendarClosed"
                            IsEnabled="False"
                            PreviewKeyDown="dtpDayUpdate_PreviewKeyDown"
                            SelectedDate="{Binding StuffDate}" />
                        <Label
                            x:Name="lblName"
                            Grid.Row="3"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="Tool명/설비예비품명" />
                        </Label>
                        <TextBox
                            x:Name="txtMCID"
                            Grid.Row="3"
                            Grid.Column="1"
                            Padding="0"
                            Background="#fff2d2"
                            Keyboard.KeyDown="txtMCID_KeyDown"
                            Tag="{Binding MCPartID}"
                            Text="{Binding MCPartName}" />
                        <Button
                            x:Name="btnPftxtMCID"
                            Grid.Row="3"
                            Grid.Column="2"
                            Click="btnPfMCID_Click"
                            Visibility="Visible">
                            <Image Margin="-2" Source="{DynamicResource btiPlusFind}" />
                        </Button>

                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="거 래 처" />
                        </Label>
                        <TextBox
                            x:Name="txtCustom"
                            Grid.Row="4"
                            Grid.Column="1"
                            Padding="0"
                            Background="#fff2d2"
                            KeyDown="txtCustom_KeyDown"
                            Tag="{Binding CustomID}"
                            Text="{Binding CustomName}" />
                        <Button
                            x:Name="btnPfCustom"
                            Grid.Row="4"
                            Grid.Column="2"
                            Click="btnPfCustom_Click"
                            Visibility="Visible">
                            <Image Margin="-2" Source="{DynamicResource btiPlusFind}" />
                        </Button>
                        <Label
                            Grid.Row="5"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="입고 수량" />
                        </Label>
                        <TextBox
                            x:Name="txtInQty"
                            Grid.Row="5"
                            Grid.Column="1"
                            Padding="0"
                            Background="#fff2d2"
                            KeyDown="txtInQty_KeyDown"
                            PreviewTextInput="txtInQty_PreviewTextInput"
                            Style="{StaticResource InputCommaZeroTextBoxNoRight}"
                            Text="{Binding TotQty}" />
                        <Label
                            Grid.Row="4"
                            Grid.Column="3"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="입고 단위" />
                        </Label>
                        <ComboBox
                            x:Name="cboUnit"
                            Grid.Row="4"
                            Grid.Column="4"
                            Padding="0"
                            Background="#fff2d2"
                            DropDownClosed="cboUnit_DropDownClosed"
                            SelectedValue="{Binding UnitClss}"
                            Style="{StaticResource Win10ComboBox}" />

                        <Label
                            Grid.Row="6"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="단     가" />
                        </Label>
                        <TextBox
                            x:Name="txtUnitPrice"
                            Grid.Row="6"
                            Grid.Column="1"
                            Padding="0"
                            KeyDown="txtUnitPrice_KeyDown"
                            PreviewTextInput="txtBox_PreviewTextInput"
                            Text="{Binding UnitPrice}" />
                        <Label
                            Grid.Row="5"
                            Grid.Column="3"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="화폐 단위" />
                        </Label>
                        <ComboBox
                            x:Name="cboPriceClss"
                            Grid.Row="5"
                            Grid.Column="4"
                            Padding="0"
                            Background="#fff2d2"
                            DropDownClosed="cboPriceClss_DropDownClosed"
                            SelectedValue="{Binding PriceClss}"
                            Style="{StaticResource Win10ComboBox}" />

                        <Label
                            Grid.Row="7"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="환     율" />
                        </Label>
                        <TextBox
                            x:Name="txtExchRate"
                            Grid.Row="7"
                            Grid.Column="1"
                            Padding="0"
                            KeyDown="txtExchRate_KeyDown"
                            PreviewTextInput="txtBox_PreviewTextInput"
                            Style="{StaticResource InputCommaZeroTextBoxNoRight}"
                            Text="{Binding ExchRate}" />
                        <Label
                            Grid.Row="6"
                            Grid.Column="3"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="부가세별도" />
                        </Label>
                        <ComboBox
                            x:Name="cboVatInd"
                            Grid.Row="6"
                            Grid.Column="4"
                            Padding="0"
                            Background="#fff2d2"
                            DropDownClosed="cboVatInd_DropDownClosed"
                            SelectedValue="{Binding Vat_Ind_YN}"
                            Style="{StaticResource Win10ComboBox}" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="부품용도" />
                        </Label>
                        <ComboBox
                            x:Name="cboForUse"
                            Grid.Row="2"
                            Grid.Column="1"
                            Padding="0"
                            Background="White"
                            DropDownClosed="cboForUse_DropDownClosed"
                            SelectedValue="{Binding ForUse}"
                            SelectionChanged="CboForUse_SelectionChanged"
                            Style="{StaticResource Win10ComboBox}"
                            ToolTip="이 부품용도는 예비품의 부품용도에서 가져옵니다." />

                        <Label
                            Grid.Row="7"
                            Grid.Column="3"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="관리사업장" />
                        </Label>
                        <ComboBox
                            x:Name="cboCompanyS"
                            Grid.Row="7"
                            Grid.Column="4"
                            Padding="0"
                            ItemsSource="{Binding ovcComID}"
                            SelectedValue="{Binding CompanyID}" />
                        <Label
                            Grid.Row="8"
                            Grid.Column="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Margin="-2" Text="비고 사항" />
                        </Label>
                        <TextBox
                            x:Name="txtRamark"
                            Grid.Row="8"
                            Grid.Column="1"
                            Grid.ColumnSpan="4"
                            Padding="0"
                            Text="{Binding Remark}" />

                       
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
