<UserControl
    x:Class="WizMes_SungShinNQ.Win_prd_Repair_Q"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WizMes_SungShinNQ"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="620"
    d:DesignWidth="820"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Margin="2"
            Background="{DynamicResource WizMes_SungShinNQ}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="100*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblDate"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblDate_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkDate"
                                Margin="5,0,-5,0"
                                VerticalAlignment="Center"
                                Checked="chkDate_Checked"
                                Unchecked="chkDate_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 검색기간" />
                    </StackPanel>
                </Label>
                <DatePicker
                    x:Name="dtpSDate"
                    Grid.Column="1"
                    Padding="0"
                    IsEnabled="False" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker
                    x:Name="dtpEDate"
                    Grid.Column="1"
                    Padding="0"
                    IsEnabled="False" />
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnLastMonth"
                    Grid.Column="0"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnLastMonth_Click"
                    Content="전월" />
                <Button
                    x:Name="btnThisMonth"
                    Grid.Column="1"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnThisMonth_Click"
                    Content="금월" />
                <Button
                    x:Name="btnYesterDay"
                    Grid.Column="2"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnYesterDay_Click"
                    Content="전일" />
                <Button
                    x:Name="btnToday"
                    Grid.Column="3"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnToday_Click"
                    Content="금일" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblMCID"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblMCID_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkMCID"
                                Margin="5,0,-5,0"
                                VerticalAlignment="Center"
                                Checked="chkMCID_Checked"
                                Unchecked="chkMCID_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 기 계 명" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtMCID"
                    Grid.Column="1"
                    Padding="0"
                    IsEnabled="False"
                    KeyDown="txtMCID_KeyDown" />
                <Button
                    x:Name="btnPfMCID"
                    Grid.Column="2"
                    Click="btnPfMCID_Click"
                    IsEnabled="False">
                    <Image
                        Margin="-2"
                        Source="{DynamicResource btiPlusFind}"
                        Style="{DynamicResource imgPlusFind}" />
                </Button>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblArticleSearch"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblArticleSearch_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkArticleSearch"
                                Margin="5,0,-5,0"
                                VerticalAlignment="Center"
                                Checked="chkArticleSearch_Checked"
                                Unchecked="chkArticleSearch_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 예 비 품" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtArticleSearch"
                    Grid.Column="1"
                    Padding="0"
                    IsEnabled="False"
                    KeyDown="txtArticleSearch_KeyDown" />
                <Button
                    x:Name="btnPfArticleSearch"
                    Grid.Column="2"
                    Click="btnPfArticleSearch_Click"
                    IsEnabled="False">
                    <Image Margin="-2" Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <Grid Grid.RowSpan="4" Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnSearch"
                        Grid.Column="0"
                        Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSearch}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSearch}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Grid.Column="1"
                        Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiClose}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblClose}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnPrint"
                        Grid.Column="0"
                        Click="btnPrint_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiPrint}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblPrint}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menu">
                                <MenuItem
                                    x:Name="menuSeeAhead"
                                    Click="menuSeeAhead_Click"
                                    Header="미리보기" />
                                <MenuItem
                                    x:Name="menuRightPrint"
                                    Click="menuRightPrint_Click"
                                    Header="바로인쇄" />
                                <MenuItem
                                    x:Name="menuClose"
                                    Click="menuClose_Click"
                                    Header="닫   기" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <Button
                        x:Name="btnExcel"
                        Grid.Column="1"
                        Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiExcel}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblExcel}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="24*" />
                <RowDefinition Height="52" />
            </Grid.RowDefinitions>
            <DataGrid
                x:Name="dgdRepairQ"
                Grid.Row="0"
                Style="{DynamicResource DataGridSet1}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Num}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="순서">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding RepairGubun_CV}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="구분">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding mcid}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="MCID">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding mcname}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="기계명">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding repairdate_CV}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="수리일자">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding repairremark}"
                        Header="설비_비고">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding MCPartID}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="부품코드">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding MCPartName}"
                        Header="부품명">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding MCCustom}"
                        Header="부품구입처">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding partcnt}"
                        CellStyle="{StaticResource NumericDataGridCell}"
                        Header="수량">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding partprice}"
                        CellStyle="{StaticResource NumericDataGridCell}"
                        Header="수리비용">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding reason}"
                        Header="사유">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding partremark}"
                        Header="부품_비고">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding RepairID}"
                        Header="ILNO"
                        Visibility="Hidden">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding repairsubseq}"
                        CellStyle="{StaticResource NumericDataGridCell}"
                        Header="SSEQ"
                        Visibility="Hidden" />
                </DataGrid.Columns>
            </DataGrid>
            <!--<TextBlock x:Name="tbkCount" Grid.Row="1" VerticalAlignment="Center" Text="▶ 검색 결과 : "/>-->
            <DataGrid
                x:Name="dgdTotal"
                Grid.Row="1"
                Style="{DynamicResource TotalGridSet1}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="40"
                        Binding="{Binding mcid}"
                        CellStyle="{StaticResource DataGridCellAndCentering}"
                        Header="">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="1*"
                        Binding="{Binding partcnt}"
                        CellStyle="{StaticResource DataGridCellAndCentering}"
                        Header="수량">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="1*"
                        Binding="{Binding partprice}"
                        CellStyle="{StaticResource DataGridCellAndCentering}"
                        Header="수리비용">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
