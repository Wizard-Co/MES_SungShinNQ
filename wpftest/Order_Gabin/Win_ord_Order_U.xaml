<UserControl x:Class="WizMes_SungShinNQ.Win_ord_Order_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_SungShinNQ"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="88*" />
                <RowDefinition Height="532*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="{DynamicResource WizMes_SungShinNQ}" Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*" />
                    <ColumnDefinition Width="160*" />
                    <ColumnDefinition Width="170*" />
                    <ColumnDefinition Width="170*" />
                    <ColumnDefinition Width="200*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65*" />
                        <ColumnDefinition Width="85*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblDateSrh" Grid.Column="0" HorizontalContentAlignment="Center" 
                           MouseLeftButtonDown="lblDateSrh_MouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="ChkDateSrh" Checked="ChkDateSrh_Checked" IsChecked="True"
                                          Unchecked="ChkDateSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <TextBlock Text=" 수주 일자" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    <DatePicker x:Name="dtpSDate" Grid.Column="1" FontSize="15"  />
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65*" />
                        <ColumnDefinition Width="85*" />
                    </Grid.ColumnDefinitions>
                    <DatePicker x:Name="dtpEDate" Grid.Column="1" FontSize="15" Grid.Row="1" Padding="0"/>
                </Grid>
                <Grid Grid.Column="1" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnLastMonth" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전월" Margin="1" Click="btnLastMonth_Click"/>
                    <Button x:Name="btnThisMonth" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금월" Margin="1" Click="btnThisMonth_Click" />
                    <Button x:Name="btnYesterDay" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전일" Margin="1" Click="btnYesterDay_Click"/>
                    <Button x:Name="btnToday" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금일" Margin="1" Click="btnToday_Click"/>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="1" Visibility="Hidden">
                    <Button x:Name="btnMassEnrollment" Margin="1" Click="btnMassEnrollment_Click">
                        <StackPanel Margin="-2" VerticalAlignment="Center">
                            <TextBlock Text="수주 일괄 복사 등록"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblCustomSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblCustomSrh_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkCustomSrh" Checked="chkCustomSrh_Checked" 
                                          Unchecked="chkCustomSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <TextBlock Text=" 거래처" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtCustomSrh" Grid.Column="1" Padding="0" IsEnabled="False" 
                             Keyboard.KeyDown="txtCustomSrh_KeyDown"/>
                    <Button x:Name="btnPfCustomSrh" Grid.Column="2" IsEnabled="False"
                            Click="btnPfCustomSrh_Click" >
                        <Image Source="{DynamicResource btiPlusFind}" Margin="-2" />
                    </Button>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblBuyerArticleNoSrh" Grid.Column="0" 
                           MouseLeftButtonUp="lblBuyerArticleNoSrh_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkBuyerArticleNoSrh" Checked="chkBuyerArticleNoSrh_Checked" 
                                          VerticalAlignment="Center" Unchecked="chkBuyerArticleNoSrh_Unchecked"/>
                            </Viewbox>
                            <TextBlock Text=" 품   번" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    <!--<TextBox x:Name="txtBuyerArticleNoSrh" Grid.Column="1" Margin="1" IsEnabled="False"/>-->
                    <TextBox x:Name="txtBuyerArticleNoSrh" Grid.Column="1" Padding="0" IsEnabled="False" KeyDown="TxtBuyerArticleNoSrh_KeyDown"/>
                    <Button x:Name="btnPfArticleNo" Grid.Column="2" Click="BtnPfArticleNo_Click" IsEnabled="False">
                        <Image Source="{DynamicResource btiPlusFind}" Margin="-2"/>
                    </Button>
                    <!--<Label x:Name="lblArticleSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblArticleSrh_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkArticleSrh" Checked="chkArticleSrh_Checked" 
                                          Unchecked="chkArticleSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <TextBlock Text=" 품   명" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtArticleSrh" Grid.Column="1" Padding="0" IsEnabled="False" 
                             Keyboard.KeyDown="txtArticleSrh_KeyDown"/>
                    <Button x:Name="btnPfArticleSrh" Grid.Column="2" IsEnabled="False" 
                            Click="btnPfArticleSrh_Click">
                        <Image Source="{DynamicResource btiPlusFind}" Margin="-2"/>
                    </Button>-->
                </Grid>

                <Grid Grid.Row="2" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblModelIDSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblModelIDSrh_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkBuyerModelIDSrh" Checked="chkBuyerModelIDSrh_Checked" 
                                          Unchecked="chkBuyerModelIDSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <TextBlock Text=" 차   종" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtBuyerModelIDSrh" Grid.Column="1" Padding="0"
                             IsEnabled="False" Keyboard.KeyDown="txtBuyerModelIDSrh_KeyDown"/>
                    <Button x:Name="btnPfBuyerModelIDSrh" Grid.Column="2"
                            IsEnabled="False" Click="btnPfBuyerModelIDSrh_Click">
                        <Image Source="{DynamicResource btiPlusFind}" Margin="-2" />
                    </Button>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*" />
                    </Grid.ColumnDefinitions>
                    <!--<Label x:Name="lblBuyerArticleNoSrh" Grid.Column="0" 
                           MouseLeftButtonUp="lblBuyerArticleNoSrh_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkBuyerArticleNoSrh" Checked="chkBuyerArticleNoSrh_Checked" 
                                          VerticalAlignment="Center" Unchecked="chkBuyerArticleNoSrh_Unchecked"/>
                            </Viewbox>
                            <TextBlock Text=" 품   번" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    --><!--<TextBox x:Name="txtBuyerArticleNoSrh" Grid.Column="1" Margin="1" IsEnabled="False"/>--><!--
                    <TextBox x:Name="txtBuyerArticleNoSrh" Grid.Column="1" Padding="0" IsEnabled="False" KeyDown="TxtBuyerArticleNoSrh_KeyDown"/>
                    <Button x:Name="btnPfArticleNo" Grid.Column="2" Click="BtnPfArticleNo_Click" IsEnabled="False">
                        <Image Source="{DynamicResource btiPlusFind}" Margin="-2"/>
                    </Button>-->
                </Grid>

                <Grid Grid.Row="0" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblOrderIDSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblOrderIDSrh_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkOrderIDSrh" Checked="chkOrderIDSrh_Checked" 
                                          Unchecked="chkOrderIDSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <TextBlock x:Name="tbkOrderSrh" Text=" 관리번호" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtOrderIDSrh" Grid.Column="1" Padding="0" IsEnabled="False"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblCloseClssSrh" Grid.Column="0" 
                           MouseLeftButtonUp="lblCloseClssSrh_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkCloseClssSrh" Checked="chkCloseClssSrh_Checked" 
                                          Unchecked="chkCloseClssSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <TextBlock Text=" 완료구분" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    <ComboBox x:Name="cboCloseClssSrh" Grid.Column="1" Padding="0" IsEnabled="False" />
                </Grid>
                <Grid Grid.Row="2" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblWorkSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblWorkSrh_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkWorkSrh" Checked="chkWorkSrh_Checked" 
                                          Unchecked="chkWorkSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <TextBlock Text=" 가공구분" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    <ComboBox x:Name="cboWorkSrh" Grid.Column="1" Padding="0" IsEnabled="False"/>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblOrderClassSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblOrderClassSrh_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal" Margin="-2">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkOrderClassSrh" Checked="chkOrderClassSrh_Checked" 
                                          Unchecked="chkOrderClassSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <TextBlock Text=" 주문구분" VerticalAlignment="Center" />
                        </StackPanel>
                    </Label>
                    <ComboBox x:Name="cboOrderClassSrh" Grid.Column="1" Padding="0"  IsEnabled="False" />
                </Grid>

                <Grid Grid.Row="0" Grid.Column="4" Grid.RowSpan="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnAdd" Grid.Column="0" Click="btnAdd_Click" Margin="1" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiInsert}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblInsert},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnUpdate" Grid.Column="1" Click="btnUpdate_Click"  Margin="1">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnDelete" Grid.Column="2" Click="btnDelete_Click" Margin="1" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiDelete}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblDelete},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnClose" Grid.Column="3" Click="btnClose_Click" Margin="1" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnSearch" Grid.Column="0" Click="btnSearch_Click"  Margin="1" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnSave" Grid.Column="1" Visibility="Hidden" Click="btnSave_Click"  Margin="1">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnCancel" Grid.Column="2" Visibility="Hidden" Click="btnCancel_Click"  Margin="1">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnExcel" Grid.Column="3" Click="btnExcel_Click" Margin="1"  >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>


            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22.5*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgdMain" Grid.Row="0" Style="{DynamicResource DataGridSet1}" 
                              SelectionChanged="dgdMain_SelectionChanged"
                              MouseLeftButtonDown="dgdMain_MouseDoubleClick"
                              SizeChanged="DataGrid_SizeChange" >
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Num}" />
                            <DataGridTextColumn Header="완료" Visibility="Hidden"/>
                            <DataGridTextColumn Header="관리번호" Binding="{Binding OrderID}" />
                            <DataGridTextColumn Header="Order No" Binding="{Binding OrderNO}" Visibility="Hidden" />
                            <DataGridTextColumn Header="거래처명" Binding="{Binding KCustom}" />
                            <DataGridTextColumn Header="품  번" Binding="{Binding BuyerArticleNo}" />
                            <DataGridTextColumn Header="품  명" Binding="{Binding Article}"/>
                            <DataGridTextColumn Header="총 주문량" Binding="{Binding OrderQty}" 
                                                CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="금  액" Binding="{Binding Amount_CV}" 
                                                CellStyle="{DynamicResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="VAT별도" Binding="{Binding Vat_IND_YN}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="내수여부" Binding="{Binding OrderFlag}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="납품장소" Binding="{Binding DvlyPlace}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="규격" Binding="{Binding OrderSpec}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="접수일자" Binding="{Binding AcptDate}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="납기일자" Binding="{Binding DvlyDate}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="가공구분" Binding="{Binding WorkID}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="P/ONo" Binding="{Binding PONO}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="비고사항" Binding="{Binding Remark}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="주문형태" Binding="{Binding OrderForm}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="주문구분" Binding="{Binding OrderClss}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="수불기준" Binding="{Binding WorkUnitClss}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="품명종류" Binding="{Binding ArticleGrpID}" Visibility="Hidden"/>

                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Row="1" Margin="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Black" VerticalContentAlignment="Center">
                            <TextBlock Text="합계" Margin="4"/>
                        </Label>
                        <TextBox x:Name="txtOrderCount" Grid.Column="1" Grid.Row="0" IsReadOnly="True"
                                 Style="{DynamicResource NumericAndReadOnlyNoBackTextBox}"/>
                        <TextBox x:Name="txtOrder" Grid.Column="1" Grid.Row="1" IsReadOnly="True" 
                                 Style="{DynamicResource NumericAndReadOnlyNoBackTextBox}"/>
                        <TextBox x:Name="txtOrderYds" Grid.Column="2" Grid.Row="0" IsReadOnly="True"
                                 Style="{DynamicResource NumericAndReadOnlyNoBackTextBox}"/>
                        <TextBox x:Name="txtOrderAmount" Grid.Column="2" Grid.Row="1" IsReadOnly="True"
                                 Style="{DynamicResource NumericAndReadOnlyNoBackTextBox}"/>
                    </Grid>
                </Grid>
                <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext" />
                <Grid Grid.Column="2" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10.5*" />
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="0.1*" />
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Margin="1">
                        <Grid x:Name="grdInput" IsHitTestVisible="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Label x:Name="lblMsg" Grid.Row="0" Grid.Column="0" Background="Yellow" Foreground="Red"
                                       VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Visibility="Hidden">
                                    <TextBlock x:Name="tbkMsg" Text="자료 입력 중" Margin="-2"/>
                                </Label>
                            </Grid>

                            <Label Grid.Row="1" Grid.Column="0" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="관리 번호" Margin="-2"/>
                            </Label>

                            <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75*" />
                                    <ColumnDefinition Width="40*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtOrderID" Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Center"
                                     Background="#c2fdc3" IsReadOnly="True" Text="{Binding OrderID}"/>
                                <ComboBox x:Name="cboOrderNO" Padding="0" Background="White"  Grid.Column="1"
                                          SelectedValue="{Binding OrderFlag}" KeyDown="CboOrderNO_KeyDown" DropDownClosed="CboOrderNO_DropDownClosed" Grid.ColumnSpan="2"/>
                            </Grid>

                            <Label Grid.Row="3" Grid.Column="3" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
                                <TextBlock Text="주문 형태" Margin="-2"/>
                            </Label>
                            <ComboBox x:Name="cboOrderForm" Grid.Row="3" Grid.Column="4" 
                                      Padding="10,0,0,0" Background="#fff2d2" SelectedValue="{Binding OrderForm}" KeyDown="CboOrderForm_KeyDown" DropDownClosed="CboOrderForm_DropDownClosed"/>

                            <Label Grid.Row="2" Grid.Column="0" Visibility="Hidden"
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="Order No." Margin="-2"/>
                            </Label>
                            <!--<Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75*" />
                                    <ColumnDefinition Width="40*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtOrderNO" Grid.Column="0" Padding="0" Visibility="Hidden"
                                         Text="{Binding OrderNO}" KeyDown="TxtOrderNO_KeyDown" /> 
                                <ComboBox x:Name="cboOrderNO" Grid.Column="1" Padding="0" Background="White"
                                          SelectedValue="{Binding OrderFlag}"/>
                                </Grid>-->
                            <Label Grid.Row="4" Grid.Column="3"  
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="주문 구분" Margin="-2"/>
                            </Label>
                            <ComboBox x:Name="cboOrderClss" Grid.Row="4" Grid.Column="4"
                                      Padding="10,0,0,0" Background="#fff2d2" SelectedValue="{Binding OrderClss}" KeyDown="CboOrderClss_KeyDown" DropDownClosed="CboOrderClss_DropDownClosed" />

                            <Label Grid.Row="3" Grid.Column="0" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="납품거래처" Margin="-2"/>
                            </Label>
                            <TextBox x:Name="txtCustom" Grid.Row="3" Grid.Column="1" Text="{Binding KCustom}" Background="#fff2d2" VerticalContentAlignment="Center"
                                     Keyboard.KeyDown="txtCustom_KeyDown" Tag="{Binding CustomID}"/>
                            <Button x:Name="btnPfCustom" Grid.Row="3" Grid.Column="2" Click="btnPfCustom_Click">
                                <Image Source="{DynamicResource btiPlusFind}" Margin="-2" />
                            </Button>
                            <Label Grid.Row="5" Grid.Column="3" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="총 주문량" Margin="-2" />
                            </Label>
                            <TextBox x:Name="txtAmount" Grid.Row="5" Grid.Column="4" 
                                     Style="{DynamicResource InputCommaTwoAndEssentialTextBox}" VerticalContentAlignment="Center"
                                     Background="#fff2d2" Text="{Binding OrderQty}" PreviewTextInput="TxtAmount_PreviewTextInput" PreviewKeyDown="TxtAmount_PreviewKeyDown"/>

                            <Label Grid.Row="4" Grid.Column="0"
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="납품 장소" Margin="-2"/>
                            </Label>
                            <TextBox x:Name="txtDylvLoc" Grid.Row="4" Grid.Column="1" VerticalContentAlignment="Center"
                                     Text="{Binding DvlyPlace}" KeyDown="TxtDylvLoc_KeyDown"/>
                            <Label Grid.Row="6" Grid.Column="3" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="주문 기준" Margin="-2"/>
                            </Label>
                            <ComboBox x:Name="cboUnitClss" Grid.Row="6" Grid.Column="4" 
                                      Padding="10,0,0,0" Background="#fff2d2" SelectedValue="{Binding UnitClss}" KeyDown="CboUnitClss_KeyDown" DropDownClosed="CboUnitClss_DropDownClosed"/>

                            <Label Grid.Row="5" Grid.Column="0" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="품   번" Margin="-2"/>
                            </Label>
                            <TextBox x:Name="txtArticle" Grid.Row="5" Grid.Column="1" Text="{Binding BuyerArticleNo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                     Tag="{Binding ArticleID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalContentAlignment="Center"
                                     Background="#fff2d2"  Keyboard.KeyDown="txtArticle_KeyDown"/>
                            <Button x:Name="btnPfArticle" Grid.Row="5" Grid.Column="2" Click="btnPfArticle_Click">
                                <Image Source="{DynamicResource btiPlusFind}" Margin="-2"/>
                            </Button>
                            
                            <Label Grid.Row="6" Grid.Column="0" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="품   명" Margin="-2"/>
                            </Label>
                            <TextBox x:Name="txtBuyerArticleNO" Grid.Row="6" Grid.Column="1"  VerticalContentAlignment="Center"
                                     Text="{Binding Article, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IsHitTestVisible="False"/>
                            <!--<Label Grid.Row="5" Grid.Column="3" Margin="1" Content="수불기준"
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox x:Name="cboWorkUnitClss" Grid.Row="5" Grid.Column="4" 
                                      Margin="1" Background="#fff2d2" SelectedValue="{Binding WorkUnitClss}"/>-->

                            <Label Grid.Row="7" Grid.Column="0" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="규   격" Margin="-2"/>
                            </Label>
                            <TextBox x:Name="txtSpec" Grid.Row="7" Grid.Column="1" Padding="0" Text="{Binding OrderSpec}" KeyDown="TxtSpec_KeyDown"/>
                            <Label Grid.Row="7" Grid.Column="3" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="품명 종류" Margin="-2"/>
                            </Label>
                            <ComboBox x:Name="cboArticleGroup" Grid.Row="7" Grid.Column="4" 
                                      Padding="10,0,0,0" Background="#fff2d2" SelectedValue="{Binding ArticleGrpID}" KeyDown="CboArticleGroup_KeyDown" DropDownClosed="CboArticleGroup_DropDownClosed"/>
                            <Label Grid.Row="8" Grid.Column="3" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="단가" Margin="-2"/>
                            </Label>
                            <TextBox x:Name="txtUnitPrice" Grid.Row="8" Grid.Column="4" VerticalContentAlignment="Center"
                                      Background="#fff2d2" Text="{Binding UnitPrice}" TextInput="TxtUnitPrice_TextInput" 
                                     Style="{DynamicResource InputCommaTwoAndEssentialTextBox}" PreviewKeyDown="TxtUnitPrice_PreviewKeyDown"/>
                            <Label Grid.Row="9" Grid.Column="3" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="부가세별도" Margin="-2"/>
                            </Label>
                            <ComboBox x:Name="cboVAT_YN" Grid.Row="9" Grid.Column="4" 
                                      Padding="10,0,0,0" Background="#fff2d2" SelectedValue="{Binding Vat_IND_YN}" KeyDown="CboVAT_YN_KeyDown" DropDownClosed="CboVAT_YN_DropDownClosed" />

                            <Label Grid.Row="8" Grid.Column="0" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="접수 일자" Margin="-2"/>
                            </Label>
                            <DatePicker x:Name="dtpAcptDate" Grid.Row="8" Grid.Column="1" Padding="0"
                                        SelectedDate="{Binding AcptDate_CV}" KeyUp="DtpAcptDate_KeyDown" KeyDown="DtpAcptDate_KeyDown"  CalendarClosed="DtpAcptDate_CalendarClosed"/>

                            <Label Grid.Row="9" Grid.Column="0" HorizontalContentAlignment="Center">
                                <StackPanel Orientation="Horizontal" Margin="-2">
                                    <Viewbox>
                                        <CheckBox x:Name="chkDvlyDate" Checked="chkDvlyDate_Checked" Unchecked="chkDvlyDate_Unchecked" PreviewKeyDown="ChkDvlyDate_PreviewKeyDown"/>
                                    </Viewbox>
                                    <TextBlock Text="납기 일자" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Label>
                            <DatePicker x:Name="dtpDvlyDate" Grid.Row="9" Grid.Column="1" Padding="0"
                                        SelectedDate="{Binding DvlyDate_CV}" IsEnabled="False" CalendarClosed="DtpDvlyDate_CalendarClosed"/>

                            <Label Grid.Row="10" Grid.Column="0" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="가공 구분" Margin="-2"/>
                            </Label>
                            <ComboBox x:Name="cboWork" Grid.Row="10" Grid.Column="1" 
                                      Padding="10,0,0,0" Background="#fff2d2" SelectedValue="{Binding WorkID}" KeyDown="CboWork_KeyDown" DropDownClosed="CboWork_DropDownClosed"/>

                            <Label Grid.Row="10" Grid.Column="3" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="P/O NO." Margin="-2"/>
                            </Label>
                            <TextBox x:Name="txtPONO" Grid.Row="10" Grid.Column="4" Padding="0,10,0,0"
                                     Text="{Binding PONO}" KeyDown="TxtPONO_KeyDown"/>

                            <Label Grid.Row="11" Grid.Column="0" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="차   종" Margin="-2"/>
                            </Label>
                            <TextBox x:Name="txtModel" Grid.Row="11" Grid.Column="1" Tag="{Binding BuyerModelID}"
                                     Keyboard.KeyDown="txtModel_KeyDown" Text="{Binding BuyerModel}"/>
                            <Button x:Name="btnPfModel" Grid.Row="11" Grid.Column="2" Click="btnPfModel_Click">
                                <Image Source="{DynamicResource btiPlusFind}" Margin="-2"/>
                            </Button>

                            <Grid Grid.Row="11" Grid.Column="3" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="95*" />
                                    <ColumnDefinition Width="95*" />
                                    <ColumnDefinition Width="10*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" 
                                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                    <TextBlock Text="최종공정 자동검사" Margin="-2"/>
                                </Label>
                                <ComboBox x:Name="cboAutoInspect" Grid.Column="1" 
                                          Style="{DynamicResource ComboBoxInputString_Q}"
                                          SelectedValue="{Binding ProductAutoInspectYN}" />
                            </Grid>

                            <Label Grid.Row="13" Grid.Column="0" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="비고사항" Margin="-2"/>
                            </Label>
                            <TextBox x:Name="txtComments" Grid.Row="13" Grid.Column="1" Padding="0" Grid.RowSpan="3" Grid.ColumnSpan="4" 
                                     VerticalScrollBarVisibility="Visible" AcceptsReturn="True" TextWrapping="Wrap"
                                     Text="{Binding Remark}"/>

                            <TextBlock x:Name="txtTip" Grid.Row="18" Grid.ColumnSpan="6" Margin="10,0,0,0" Text="※실적 등록 시, 거래처별 품번 필터링을 원하시면 먼저 거래처 검색 후 품번을 검색하세요." 
                                       Foreground="Blue" VerticalAlignment="Bottom" FontSize="10"/>

                            <TextBlock Grid.Row="18" Grid.Column="0" HorizontalAlignment="Center" Visibility="Hidden"
                                       VerticalAlignment="Stretch" Margin="-2" Text="[ 검  사 ]" />
                            
                           
                        </Grid>
                    </GroupBox>
                    <Grid Grid.Row="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <GroupBox Grid.Row="0" Grid.Column="0" Margin="1" Visibility="Hidden">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <RadioButton x:Name="rbnOrderNo" Grid.Row="0" VerticalAlignment="Center" Margin="1">
                                    <StackPanel Margin="-2">
                                        <TextBlock Text="Order No." VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton x:Name="rbnOrderID" Grid.Row="1" VerticalAlignment="Center" Margin="1"
                                             IsChecked="True">
                                    <StackPanel Margin="-2">
                                        <TextBlock Text="관리번호 " VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                            </Grid>
                        </GroupBox>
                        <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnNeedStuff" Grid.Row="0" Grid.Column="1" Margin="1" 
                                    Content="자재 필요량 조회" Click="btnNeedStuff_Click" IsEnabled="False"/>
                            <DataGrid x:Name="dgdNeedStuff" Grid.Row="1" Grid.Column="1" 
                                      Grid.ColumnSpan="3" Style="{DynamicResource DataGridSet1}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="품 번" Binding="{Binding BuyerArticleNo}" Width="auto"/>
                                    <DataGridTextColumn Header="품 명" Binding="{Binding Article}" Width="auto"/>
                                    <DataGridTextColumn Header="수 량" Binding="{Binding NeedQty}" Width="auto"
                                                        CellStyle="{StaticResource NumericDataGridCell}"/>
                                    <DataGridTextColumn Header="단 위" Binding="{Binding UnitClssName}" Width="auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Button x:Name="btnPlanInput" Grid.Row="0" Grid.Column="2" Margin="10" Visibility="Hidden">
                            <TextBlock Text="생산계획작성" />
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Popup x:Name="popPreviousOrder"  Placement="Center" Opened="popPreviousOrder_Opened">
            <Border BorderBrush="Green" BorderThickness="5" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="전월분 복사 등록" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="Green"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="복사 월" Margin="2" />
                    <DatePicker x:Name="dtpPreviousMonth" Grid.Column="1" Grid.Row="1" Margin="2" 
                            local:DatePickerMonthCalendar.IsMonthYear="True"
                            local:DatePickerDateFormat.DateFormat="yyyy-MM"/>
                    <Label Grid.Column="0" Grid.Row="2" Content="적용 월" Margin="2" />
                    <DatePicker x:Name="dtpThisMonth" Grid.Column="1" Grid.Row="2" Margin="2" 
                            local:DatePickerMonthCalendar.IsMonthYear="True"
                            local:DatePickerDateFormat.DateFormat="yyyy-MM"/>
                    <Button x:Name="btnPreOrderOK" Grid.Column="0" Grid.Row="3" Margin="1" Content="확인" Click="btnPreOrderOK_Click"/>
                    <Button x:Name="btnPreOrderCC" Grid.Column="1" Grid.Row="3" Margin="1" Content="취소" Click="btnPreOrderCC_Click"/>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
