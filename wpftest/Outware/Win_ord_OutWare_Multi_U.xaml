<UserControl x:Class="WizMes_SungShinNQ.Win_ord_OutWare_Multi_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_SungShinNQ"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="515*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Background="{DynamicResource WizMes_SungShinNQ}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Grid Grid.Column="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="85*"/>
                </Grid.ColumnDefinitions>

                <Label  Grid.Column="0" Grid.Row="0" MouseLeftButtonUp="lblOutwareDay_Click" >
                    <StackPanel Orientation="Horizontal" Margin="-2" >
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkOutwareDay"  Checked="ChkOutwareDay_Checked" Unchecked="ChkOutwareDay_Unchecked"></CheckBox>
                        </Viewbox>
                        <TextBlock Text="출고일자" VerticalAlignment="Center" Margin="-5, 0, 0, 0"/>
                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpFromDate" Grid.Column="1" Grid.Row="0" Padding="0" TabIndex="1"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="85*"/>
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="dtpToDate" Grid.Column="1" Grid.Row="0" Padding="0"  TabIndex="2"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <Button x:Name="btnLastMonth" Grid.Column="2" Click="btnLastMonth_Click">
                    <TextBlock Margin="-2" Text="전월"></TextBlock>
                </Button>
                <Button x:Name="btnThisMonth" Grid.Column="3" Click="btnThisMonth_Click">
                    <TextBlock Margin="-2" Text="금월"></TextBlock>
                </Button>
                <Button x:Name="btnYesterday" Grid.Column="0" Click="btnYesterday_Click" >
                    <TextBlock Margin="-2" Text="전일"></TextBlock>
                </Button>
                <Button x:Name="btnToday" Grid.Column="1" Click="btnToday_Click">
                    <TextBlock Margin="-2" Text="금일"></TextBlock>
                </Button>
            </Grid>

            <!--거래처-->
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>

                <Label x:Name="lblCustomIDSrh" Grid.Column="0" MouseLeftButtonUp="CommonControl_Click">
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkCustomIDSrh" Click="CommonControl_Click"></CheckBox>
                        </Viewbox>
                        <TextBlock Text="거래처" VerticalAlignment="Center" Margin="-5, 0, 0, 0"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtCustomIDSrh" Grid.Column="1" Padding="0" KeyDown="CommonPlusfinder_KeyDown" IsEnabled="False" />
                <Button x:Name="btnCustomIDSrh"  Grid.Column="2" Click="CommonPlusfinder_Click" IsEnabled="False">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" Margin="-2"/>
                </Button>
            </Grid>

            <!--최종고객사-->
            <Grid Grid.Column="2" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblInCustomIDSrh" Grid.Column="0" MouseLeftButtonUp="CommonControl_Click">
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkInCustomIDSrh" Click="CommonControl_Click"/>
                        </Viewbox>
                        <TextBlock Text="최종고객사" VerticalAlignment="Center" Margin="-5,0,0,0"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtInCustomIDSrh" Grid.Column="1" IsEnabled="False" KeyDown="CommonPlusfinder_KeyDown"/>
                <Button x:Name="btnInCustomIDSrh" Grid.Column="2" IsEnabled="False" Click="CommonPlusfinder_Click">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}"/>
                </Button>
            </Grid>
            
            <!--품번-->
            <Grid Grid.Column="2" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblBuyerArticleNoSrh" Grid.Column="0" MouseLeftButtonUp="CommonControl_Click">
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkBuyerArticleNoSrh" Click="CommonControl_Click"/>
                        </Viewbox>
                        <TextBlock Text="품   번" VerticalAlignment="Center" Margin="-5,0,0,0"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtBuyerArticleNoSrh" Grid.Column="1" IsEnabled="False" KeyDown="CommonPlusfinder_KeyDown"/>
                <Button x:Name="btnBuyerArticleNoSrh" Grid.Column="2" IsEnabled="False" Click="CommonPlusfinder_Click">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}"/>
                </Button>
            </Grid>
            
            <!--품명-->
            <Grid Grid.Column="2" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>

                <Label x:Name="lblArticleIDSrh" Grid.Column="0" MouseLeftButtonUp="CommonControl_Click" >
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkArticleIDSrh" Click="CommonControl_Click"></CheckBox>
                        </Viewbox>
                        <TextBlock Text="품   명" VerticalAlignment="Center" Margin="-5, 0, 0, 0"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtArticleIDSrh" Grid.Column="1" Padding="0" IsEnabled="False" KeyDown="CommonPlusfinder_KeyDown"/>
                <Button x:Name="btnArticleIDSrh"  Grid.Column="2" Click="CommonPlusfinder_Click" IsEnabled="False">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" Margin="-2"/>
                </Button>
            </Grid>

            <!--Order No-->
            <Grid Grid.Column="3" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="115*" />
                </Grid.ColumnDefinitions>

                <Label x:Name="lblOrderNoSrh" Grid.Column="0" MouseLeftButtonUp="CommonControl_Click">
                    <StackPanel Orientation="Horizontal" Margin="-2">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkOrderNoSrh"  Click="CommonControl_Click"/>
                        </Viewbox>
                        <TextBlock x:Name="tbxOrderNo" Text="OrderNo"  VerticalAlignment="Center" Margin="-5, 0, 0, 0"/>
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtOrderNoSrh" Grid.Column="1" Padding="0" IsEnabled="False"/>
            </Grid>

            <!--버튼모음-->
            <Grid Grid.Column="4" Grid.RowSpan="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>

                <!-- 추가버튼 -->
                <Grid Grid.Column="0" Grid.Row="0">
                    <Button x:Name="btnAdd"  Grid.Column="9" Grid.RowSpan="2" Grid.Row="1" Tag="1" Click="btnAdd_Click" >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiInsert}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblInsert},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 수정버튼 -->
                <Grid Grid.Column="1" Grid.Row="0">
                    <Button x:Name="btnUpdate"  Grid.Column="10" Grid.RowSpan="2" Grid.Row="1" Tag="2" Click="btnUpdate_Click" >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 삭제버튼 -->
                <Grid Grid.Column="2" Grid.Row="0">
                    <Button x:Name="btnDelete"  Grid.Column="10" Grid.RowSpan="2" Grid.Row="3" Click="btnDelete_Click"  >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiDelete}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblDelete},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 닫기버튼 -->
                <Grid Grid.Column="3" Grid.Row="0">
                    <Button x:Name="btnClose"  Grid.Column="1" Grid.Row="0" Click="btnClose_Click"  >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 검색버튼 -->
                <Grid Grid.Column="0" Grid.Row="1">
                    <Button x:Name="btnSearch" Grid.Column="0" Grid.Row="1" Click="btnSearch_Click" >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 저장버튼 -->
                <Grid Grid.Column="1" Grid.Row="1">
                    <Button x:Name="btnSave"  Grid.Column="10" Grid.RowSpan="2" Grid.Row="5" Click="btnSave_Click" >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 취소 버튼 -->
                <Grid Grid.Column="2" Grid.Row="1">
                    <Button x:Name="btnCancel"  Grid.Column="11" Grid.RowSpan="2" Grid.Row="5" Click="btnCancel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 엑셀버튼 -->
                <Grid Grid.Column="3" Grid.Row="1" >
                    <Button x:Name="btnExcel"  Grid.Column="11" Grid.RowSpan="2" Grid.Row="3" Click="btnExcel_Click" >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 인쇄버튼 -->
                <Grid Grid.Column="3" Grid.Row="2" Visibility="Visible">
                    <Button x:Name="btnPrint" Click="btnPrint_Click" Tag="Bill">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiPrint}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="거래명세서" VerticalAlignment="Center" />
                        </StackPanel>
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menu">
                                <MenuItem Header="미리보기" Click="menuSeeAhead_Click" ></MenuItem>
                                <MenuItem Header="바로인쇄" Click="menuRighPrint_Click"  ></MenuItem>
                                <MenuItem Header="닫   기" Click="menuClose_Click"  ></MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>

                <Grid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
                    <Label x:Name="EventLabel" Margin="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Background="Yellow" Foreground="Red" Visibility="Hidden" FontWeight="Bold">
                        <TextBlock x:Name="tbkMsg" Margin="0" Text="자료 입력 중" />
                    </Label>
                </Grid>
            </Grid>
        </Grid>

        <!--하단 레이아웃 나누기-->
        <Grid Grid.Column="0" Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="570*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="55"/>
                </Grid.RowDefinitions>
            <!--데이터그리드-->
            <DataGrid x:Name="dgdOutware" Grid.Column="0" Grid.Row="0"  IsReadOnly="True" 
                      SelectionChanged="dgdOutware_SelectionChanged"
                      Style="{DynamicResource DataGridSet1}">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#3399FF"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#3399FF" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White"/>
                        </Style.Resources>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                        <!--체크박스 시작-->
                        <DataGridTemplateColumn Header="선택" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Click="chkReqDgdMain_Click">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="true">
                                                        <Setter Property="IsChecked" Value="True"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="false">
                                                        <Setter Property="IsChecked" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </CheckBox.Style>
                                    </CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--체크박스 끝-->
                        <DataGridTextColumn Header="순" Binding="{Binding Num}"  ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="출고일자" Binding="{Binding OutDate, StringFormat={}{0:yyyy-MM-dd}}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="거래처" Binding="{Binding KCustom}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="품번" Binding="{Binding BuyerArticleNo}" ElementStyle="{DynamicResource DataGridCellLeft}"/>
                        <DataGridTextColumn Header="품명" Binding="{Binding Article}" ElementStyle="{DynamicResource DataGridCellLeft}"/>
                        <DataGridTextColumn Header="수량" Binding="{Binding OutQty,Converter={StaticResource NumberConverter}}" ElementStyle="{DynamicResource DataGridCellRight}"/>
                </DataGrid.Columns>
            </DataGrid>
                <Grid Grid.Row="1">                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="80*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Background="#365FB1">
                        <Viewbox MaxWidth="15">
                            <StackPanel >
                                <TextBlock Text="합" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="계" Foreground="White" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Viewbox>
                    </Grid>
                    <DataGrid x:Name="dgdTotal" Grid.Column="1" Style="{DynamicResource DataGridSet1}" HeadersVisibility="Column">              
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="건수" Width="*" Binding="{Binding OutRoll, StringFormat={}{0:N0}}"  ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="수량" Width="*" Binding="{Binding OutQtyTotal, StringFormat={}{0:N0}}"  ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="금액" Width="*" Binding="{Binding OutPriceTotal, StringFormat={}{0:N0}}"  ElementStyle="{StaticResource DataGridCellCenter}" Visibility="Hidden"/>
                        </DataGrid.Columns>                        
                    </DataGrid>
                </Grid>
            </Grid>
            <!-- 스플릿터 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <Grid x:Name="grdInput" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="210*" />
                    <RowDefinition Height="80*" />
                    <RowDefinition Height="242*" />
                </Grid.RowDefinitions>

                <GroupBox x:Name="grbOutwareDetailBox" Grid.Row="0" Header="출고 내역" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="82*" />
                            <ColumnDefinition Width="133*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="82*" />
                            <ColumnDefinition Width="133*" />
                            <ColumnDefinition Width="20*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="10*" />
                        </Grid.RowDefinitions>
                        
                        <!--관리번호-->
                        <!--<Label Grid.Column="0" Grid.Row="0" Visibility="Hidden"
                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="관리번호" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtOrderID"  Grid.Column="1" Grid.Row="0" Padding="0" VerticalContentAlignment="Center" Visibility="Hidden"
                                 Text="{Binding Path=OrderID}" KeyDown="txtOrderID_KeyDown" TabIndex="12" PreviewTextInput="txtOrderID_PreviewTextInput" />
                        <Button x:Name="btnOrderID"  Grid.Column="2" Grid.Row="0" Click="btnOrderID_Click" Visibility="Hidden">
                            <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" Margin="-2"/>
                        </Button>-->
                        
                        <!--오더번호-->
                        <Label Grid.Column="0" Grid.Row="0" 
                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="오더번호" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtOrderNo"  Grid.Column="1" Grid.Row="0" Padding="0" VerticalContentAlignment="Center"
                                 Text="{Binding Path=OrderID}" Style="{DynamicResource TextBoxInputNecessary}" 
                                 KeyDown="CommonPlusfinder_KeyDown" TabIndex="12"/>
                        <Button x:Name="btnOrderNo"  Grid.Column="2" Grid.Row="0" Click="CommonPlusfinder_Click">
                            <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}" Margin="-2"/>
                        </Button>


                        <!--출고일-->
                        <Label Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="출고일자" Margin="-2"/>
                        </Label>
                        <DatePicker x:Name="dtpOutDate" Grid.Column="1" Grid.Row="1" Padding="0" Text="{Binding Path=OutDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>


                        <!--출고구분-->
                        <Label Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="출고구분" Margin="-2"/>
                        </Label>
                        <ComboBox x:Name="cboOutClss" Grid.Column="1" Grid.Row="2" Padding="0"  SelectedValue="{Binding Path=OutClss}" 
                                  Background="#fff2d2" VerticalContentAlignment="Center"
                                   TabIndex="13"/>
                       
                        <!--박스/수량 시작-->
                        <Label Grid.Column="3" Grid.Row="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="박스/수량" Margin="-2"/>
                        </Label>
                        <Grid Grid.Column="4" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtOutRoll" Grid.Column="0" Padding="0" Text="{Binding Path=OutRoll,Converter={StaticResource NumberConverter}, Mode=TwoWay}"
                                     Background="#fff2d2" TabIndex="14" IsReadOnly="True" Style="{DynamicResource TextBoxInput_Number_Right}"/>
                            <TextBox x:Name="txtOutQty" Grid.Column="1" Padding="0" Text="{Binding Path=OutQty,Converter={StaticResource NumberConverter}, Mode=TwoWay}"
                                     Background="#fff2d2" TabIndex="15" IsReadOnly="True" Style="{DynamicResource TextBoxInput_Number_Right}"/>
                        </Grid>
                        <!--박스/수량 끝-->

   
                        <!--출고거래처-->
                        <Label Grid.Column="0" Grid.Row="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="출고거래처" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtCustomID" Grid.Column="1" Grid.Row="3" Padding="0" Style="{DynamicResource TextBoxInputArea}"
                                 Text="{Binding Path=KCustom}" Tag="{Binding Path=CustomID, Mode=TwoWay}" TabIndex="17" IsReadOnly="True"/>
                 
                        <!--출고처-->
                        <Label Grid.Column="0" Grid.Row="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="출고처" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtOutCustomID" Grid.Column="1" Grid.Row="4" Padding="0" Style="{DynamicResource TextBoxInputArea}"
                                 Text="{Binding Path=OutCustom}" Tag="{Binding Path=OutCustomID,Mode=TwoWay}" TabIndex="19"  IsReadOnly="True"/>
                        
                        <!--비고-->
                        <Label Grid.Column="0" Grid.Row="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
                            <TextBlock Text="비    고" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtRemark" Grid.Column="1" Grid.Row="5" Padding="0" Text="{Binding Path=Memo}" 
                                 TabIndex="24" Grid.RowSpan="2" TextWrapping="Wrap" AcceptsReturn="True" />

                        <!--단가-->
                        <Label Grid.Column="0" Grid.Row="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden">
                            <TextBlock Text="단      가" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtUnitPrice" Grid.Column="1" Grid.Row="7" HorizontalContentAlignment="Right" Visibility="Hidden"

                                 Text="{Binding Path=UnitPrice}" Padding="0" TabIndex="21"/>
                        <!--품명 시작-->
                        <Label Grid.Column="3" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="품    명" Margin="-2"/>
                        </Label>
                        <Grid Grid.Column="4" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtArticleID_InGroupBox" Grid.Column="0" Padding="0" Text="{Binding Path=ArticleID}" Style="{DynamicResource TextBoxInputArea}" IsHitTestVisible="False" IsEnabled="False" />
                            <TextBox x:Name="txtArticle_InGroupBox"  Grid.Column="2" Grid.Row="0" Padding="0" IsHitTestVisible="False" Style="{DynamicResource TextBoxInputArea}"
                                 Text="{Binding Path=Article}" Tag="{Binding Path=ArticleID}" TabIndex="20" IsEnabled="False" />
                        </Grid>
                        <!--품명 끝-->

                        <Label Grid.Column="3" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="품    번" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtBuyerArticleNo" Grid.Column="4" Grid.Row="1" Padding="0"  Style="{DynamicResource TextBoxInputArea}"
                                 Text="{Binding Path=BuyerArticleNo}" TabIndex="21" IsReadOnly="True" />
                        <!--차종--><!--
                        <Label Grid.Column="3" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden">
                            <TextBlock Text="차    종" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtBuyerModel" Grid.Column="4" Grid.Row="2" Padding="0" Visibility="Hidden" 
                                 Text="{Binding Path=BuyerModel}" TabIndex="21"/>-->
                        
                        <!--출고번호-->
                        <Label Grid.Column="3" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="출고번호" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtOutwareID" Grid.Column="4" Grid.Row="0" Padding="0"
                                 Text="{Binding Path=OutWareID}" Background="#c2fdc3" />
                        
                        <!--전창고-->
                        <Label Grid.Column="3" Grid.Row="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock Text="전 창고" Margin="-2"/>
                        </Label>
                        <ComboBox x:Name="cboFromLoc" Grid.Column="4" Grid.Row="4" Padding="0"
                                  SelectedValue="{Binding Path=FromLocID}" Background="#fff2d2"
                                  TabIndex="22" />
                        
                        <Label Grid.Column="3" Grid.Row="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden" >
                            <TextBlock Text="후 창고" Margin="-2"/>
                        </Label>
                        <ComboBox x:Name="cboToLoc" Grid.Column="4" Grid.Row="5" Padding="0" SelectedValue="{Binding Path=TOLocID}"
                                  TabIndex="23" Visibility="Hidden" />
                    </Grid>
                </GroupBox>

                <!-- 우측 중간 스캔공간 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Background="AliceBlue">
                        <Image Source="{StaticResource imgScanner}" Margin="5"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Border BorderBrush="#FF808080" BorderThickness="0,0,2,2">
                            <Border BorderBrush="#FFE0E0E0" BorderThickness="2,2,0,0">
                                <TextBox x:Name="txtScan" 
                         Background="LightGreen"  BorderThickness="0"
                         FontSize="40"  FontWeight="Bold"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Left" 
                         TextAlignment="Left"
                         PreviewKeyDown="txtScan_PreviewKeyDown"
                         KeyDown="txtScan_KeyDown"
                         IsEnabled="False"/>
                            </Border>
                        </Border>
                    </Grid>
                </Grid>
               
                
                
                 <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/> <!-- 상단 바-->
                        <RowDefinition Height="*"/> <!--하단 서브그리드-->
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"> <!--상단-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/> <!--5개 모두 상단바 나눈것-->                           
                            <ColumnDefinition Width="*"/> 
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="0.02*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnSelectAllLeft"  Grid.Column="0"  Grid.Row="5" Click="btnSelectAllLeft_Click"  
                                IsEnabled="False">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="전체선택" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnBoxSearch"  Grid.Column="2"  Grid.ColumnSpan="2" Grid.Row="5" Click="btnBoxSearch_Click"  
                                IsEnabled="False">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="txtBoxSearch" Text="박스조회" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnSelectAllRight"  Grid.Column="5"  Grid.Row="5" Click="btnSelectAllRight_Click"  
                                IsEnabled="False">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="전체선택" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <ToggleButton x:Name="tbnCustomLabelID" Content="고객라벨스캔" Grid.Column="8" Click="tbnCustomLabelID_Click" Grid.ColumnSpan="2" IsEnabled="False"/>
                    </Grid>
                    <Grid Grid.Row="2"> <!--서브그리드-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/> <!--서브그리드 좌측-->
                            <ColumnDefinition Width="50"/><!--화살표 공간-->
                            <ColumnDefinition Width="*"/><!--서브그리드 우측-->
                        </Grid.ColumnDefinitions>
                        
                        <!--좌측 서브그리드 시작-->
                        <DataGrid x:Name="dgdLeft" Grid.Column="0" Margin="1.5" Style="{DynamicResource DataGridSet1}" HeadersVisibility="Column" >
                            <DataGrid.Resources>
                                <Style TargetType="DataGridCell">
                                    <EventSetter Event="KeyUp" Handler="TextBoxFocusInDataGrid" />
                                    <EventSetter Event="PreviewKeyDown" Handler="DataGridSubCell_PreviewKeyDown"/>
                                    <EventSetter Event="KeyDown" Handler="DataGridSubCell_KeyDown"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <!--체크박스 시작-->
                                <DataGridTemplateColumn Header="선택" >                                
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Click="chkReqDgdLeft_Click" Checked="CheckBox_CheckedChangedLeft" Unchecked="CheckBox_UnCheckedChangedLeft">
                                                <CheckBox.Style>
                                                    <Style TargetType="CheckBox">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="true">
                                                                <Setter Property="IsChecked" Value="true"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="false">
                                                                <Setter Property="IsChecked" Value="false"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </CheckBox.Style>
                                            </CheckBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <!--체크박스 끝-->
                                <DataGridTextColumn Header="순" Width="auto" Binding="{Binding Num, Converter={StaticResource NumberConverter}}" IsReadOnly="True" ElementStyle="{StaticResource DataGridCellCenter}"/>
                                <DataGridTextColumn Header="바코드" Width="*" Binding="{Binding LabelID}" IsReadOnly="True" ElementStyle="{StaticResource DataGridCellLeft}"/>
                                <DataGridTextColumn Header="수량" Width="*" Binding="{Binding BoxQty,Converter={StaticResource NumberConverter}}" ElementStyle="{StaticResource DataGridCellRight}" IsReadOnly="True"/>
                                <DataGridTextColumn Header="단위" Width="*" Binding="{Binding UnitClssName}" ElementStyle="{StaticResource DataGridCellCenter}" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <!--좌측 서브그리드 끝-->
                        
                        <!--가운데 공간 시작-->
                        <Grid Grid.Column="1"> <!--서브그리드 내 화살표 공간-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/> <!--4개 모두 화살표 공간 나눈 것-->
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--좌우 버튼 시작-->
                            <Button x:Name="btnAddSelectItem" Grid.Row="1" Margin="1" 
                                VerticalContentAlignment="Center" Click="btnAddSelectItem_Click" IsEnabled="False"
                                HorizontalContentAlignment="Center" Style="{DynamicResource btnInNoViewBox}">
                                <Image Source="{DynamicResource btiAddRight}" />
                            </Button>
                            <Button x:Name="btnDelSelectItem" Grid.Row="2" Margin="1" 
                                VerticalContentAlignment="Center" Click="btnDelSelectItem_Click" IsEnabled="False"
                                HorizontalContentAlignment="Center" Style="{DynamicResource btnInNoViewBox}">
                                <Image Source="{DynamicResource btiAddLeft}" />
                            </Button>
                            <!--좌우 버튼 끝-->
                        </Grid>
                        <!--가운데 공간 끝-->

                        <!--우측 서브그리드 시작-->
                        <DataGrid x:Name="dgdRight"  Grid.Column="2" Margin="1.5" HeadersVisibility="Column" Style="{DynamicResource DataGridSet1}">
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <!--<EventSetter Event="KeyUp" Handler="DataGridCell_KeyUp"/>-->
                                    <EventSetter Event="MouseUp" Handler="DataGridCell_MouseUp"/>
                                    <EventSetter Event="GotFocus" Handler="DataGridCell_GotFocus"/>
                                    <EventSetter Event="KeyUp" Handler="TextBoxFocusInDataGrid" />
                                    <EventSetter Event="PreviewKeyDown" Handler="DataGridSubCell_PreviewKeyDown"/>
                                    <EventSetter Event="KeyDown" Handler="DataGridSubCell_KeyDown"/>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <EventSetter Event="MouseEnter" Handler="DataGridRow_MouseEnter"/>
                                    <EventSetter Event="MouseLeave" Handler="DataGridRow_MouseLeave"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <!--체크박스 시작-->
                                <DataGridTemplateColumn Header="선택"  IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Click="chkReqDgdRight_Click" Checked="CheckBox_CheckedChangedRight" Unchecked="CheckBox_UnCheckedChangedRight">
                                                <CheckBox.Style>
                                                    <Style TargetType="CheckBox">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="true">
                                                                <Setter Property="IsChecked" Value="True"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="false">
                                                                <Setter Property="IsChecked" Value="False"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </CheckBox.Style>
                                            </CheckBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <!--체크박스 끝-->
                                <DataGridTextColumn Header="순" Width="auto" Binding="{Binding Num, Mode=TwoWay}" IsReadOnly="True" ElementStyle="{StaticResource DataGridCellCenter}"/>
                                <DataGridTextColumn Header="바코드" Width="*" Binding="{Binding LabelID, Mode=TwoWay}" IsReadOnly="True" ElementStyle="{StaticResource DataGridCellLeft}"/>
                                <DataGridTemplateColumn Header="수량" Width="auto" IsReadOnly="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock x:Name="txtBoxQty" Width="auto" MinWidth="50"
                                               Text="{Binding OutQty, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,Converter={StaticResource NumberConverter}}" 
                                               Tag="{Binding LabelID, Mode=TwoWay}"
                                               TextAlignment="Right" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding OutQty, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,Converter={StaticResource NumberConverter}}" 
                                                     Tag="{Binding LabelID,Mode=TwoWay}"
                                                    Foreground="Black" Width="auto" MinWidth="50"
                                                    TextAlignment="Center"
                                                    VerticalAlignment="Center"   
                                                     LostFocus="BoxQtyColumn_LostFocus"
                                                     PreviewKeyDown="BoxQtyColumn_PreviewKeyDown" 
                                                     PreviewTextInput="txtOutQty_PreviewTextInput">
                                                
                                            </TextBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>                                    
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="단위" Width="*" Binding="{Binding UnitClssName,  Mode=TwoWay}" ElementStyle="{StaticResource DataGridCellCenter}" IsReadOnly="True"/>
                                <DataGridTemplateColumn Header="고객라벨" Width="*" IsReadOnly="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding CustomBoxID,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Style="{StaticResource DataGridCellLeft}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding CustomBoxID,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Style="{StaticResource TextBoxInputArea}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                        <!--우측 서브그리드 끝-->
                    </Grid>
                </Grid>

                <!--하단 끝-->


            </Grid>
        </Grid>
    
    </Grid>
</UserControl>
