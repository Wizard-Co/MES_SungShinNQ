<UserControl x:Class="WizMes_SungShinNQ.Win_com_ArticleCode_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_SungShinNQ"         
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <!--xmlns:dgx="clr-namespace:DataGridExtensions;assembly=DataGridExtensions"-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource WizMes_SungShinNQ}" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="190*" />
                <ColumnDefinition Width="200*" />
                <ColumnDefinition Width="130*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="125*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" VerticalContentAlignment="Center" Margin="1" MouseLeftButtonUp="lblBuyerArticleNoSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <Viewbox>
                            <CheckBox x:Name="chkBuyerArticleNoSrh" Checked="chkBuyerArticleNoSrh_Checked" Unchecked="chkBuyerArticleNoSrh_Unchecked" VerticalAlignment="Center" />
                        </Viewbox>
                        <TextBlock Text="품    번 " VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtBuyerArticleNoSrh" Grid.Column="1" Grid.ColumnSpan="2" Margin="1" IsEnabled="False" KeyDown="TxtBuyerArticleNoSrh_KeyDown"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="30*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" VerticalContentAlignment="Center" Margin="1" MouseLeftButtonUp="lblSupplyTypeSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <Viewbox>
                            <CheckBox x:Name="chkSupplyTypeSrh" Checked="chkSupplyTypeSrh_Checked" Unchecked="chkSupplyTypeSrh_Unchecked" VerticalAlignment="Center" />
                        </Viewbox>
                        <TextBlock Text="공급유형 " VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboSrhSupplyType" Grid.Column="1" Margin="1" Background="White" IsEnabled="False"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="30*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticleGrpSrh" Grid.Column="0" VerticalContentAlignment="Center"
                       MouseLeftButtonUp="lblArticleGrpSrh_MouseLeftButtonUp" Margin="1">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <Viewbox>
                            <CheckBox x:Name="chkArticleGrpSrh" Checked="chkArticleGrpSrh_Checked" Unchecked="chkArticleGrpSrh_Unchecked" VerticalAlignment="Center" />
                        </Viewbox>
                        <TextBlock Text="품명그룹"  VerticalAlignment="Center"/>
                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboArticleGrpSearch" Grid.Column="1" Margin="1" IsEnabled="False" Background="White"/>
            </Grid>

            <!-- 사용안함 -->
            <Grid Grid.Column="2" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Margin="1" MouseLeftButtonUp="lblNoUse_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="chkNoUse" VerticalAlignment="Center" 
                                  Checked="chkNoUse_Checked" Unchecked="chkNoUse_UnChecked" />
                        <TextBlock Text="사용안함 포함" />
                    </StackPanel>
                </Label>
            </Grid>

            <Grid Grid.Column="4" Grid.Row="0" Grid.RowSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnAdd" Grid.Column="0" Margin="1" Click="btnAdd_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiInsert}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblInsert},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnUpdate" Grid.Column="1" Margin="1" Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnDelete" Grid.Column="2" Margin="1" Click="btnDelete_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiDelete}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblDelete},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnClose" Grid.Column="3" Margin="1" Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <Button x:Name="btnSearch" Grid.Column="0" Margin="1" Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnSave" Grid.Column="1" Margin="1" Click="btnSave_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnCancel" Grid.Column="2" Margin="1" Click="btnCancel_Click" Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnExcel" Grid.Column="3" Margin="1" Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>

        </Grid>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.82*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <DataGrid x:Name="dgdArticleCode" Grid.Row="0" SelectionChanged="dgdArticleCode_SelectionChanged" 
                          MouseDoubleClick="dgdArticleCode_MouseDoubleClick" Grid.ColumnSpan="2"
                          Style="{DynamicResource DataGridSet1}">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding UseClss}" Value="*" >
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Num}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="코드" Binding="{Binding ArticleID}"  Visibility="Hidden"/>
                        <!--<DataGridTextColumn Header="품번" Binding="{Binding BuyerArticleNo}" />-->
                        <DataGridTextColumn Header="품번" Binding="{Binding BuyerArticleNo}" />
                        <DataGridTextColumn Header="품명" Binding="{Binding Article}" />
                        <DataGridTextColumn Header="중량" Binding="{Binding Weight}" 
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="세부내역" Binding="{Binding Spec}" />
                        <DataGridTextColumn Header="이미지명" Binding="{Binding ImageName}" />
                        <DataGridTextColumn Header="사용여부" Binding="{Binding UseClssName}" />
                        <DataGridTextColumn Header="품명그룹" Binding="{Binding ArticleGrp}" />
                        <DataGridTextColumn Header="품명그룹ID" Binding="{Binding ArticleGrpID}"  Visibility="Hidden"/>
                        
                        <DataGridTextColumn Header="공급유형" Binding="{Binding SupplyTypeName}" />
                        <DataGridTextColumn Header="공급유형ID" Binding="{Binding SupplyType}"  Visibility="Hidden"/>
                        <DataGridTextColumn Header="용도" Binding="{Binding UseingTypeName}" />
                        <DataGridTextColumn Header="단위" Binding="{Binding UnitClssName}" />
                        <DataGridTextColumn Header="적정재고량" Binding="{Binding NeedStockQty}" 
                                            
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="생산박스당 수량" Binding="{Binding ProdQtyPerBox}" 
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="출하용박스 수량" Binding="{Binding OutQtyPerBox}" 
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="고객품번" Binding="{Binding BuyerArticleNo}" />
                        <DataGridTextColumn Header="부품분류" Binding="{Binding PartGBNName}" />
                        <DataGridTextColumn Header="단가" Binding="{Binding OutUnitPrice}" 
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="화폐단위" Binding="{Binding UnitPriceClss}" 
                                            
                                            CellStyle="{DynamicResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="HSCODE" Binding="{Binding HSCODE}" />
                        <DataGridTextColumn Header="FTAMgrYN" Binding="{Binding FTAMgrYN}" />
                        <DataGridTextColumn Header="도금사양" Binding="{Binding CoatingSpec}" />
                        <DataGridTextColumn Header="매입매출중점관리품" Binding="{Binding BuySaleMainYN}" />
                        <DataGridTextColumn Header="비고" Binding="{Binding Comments}" />
                    </DataGrid.Columns>
                </DataGrid>
                
                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="chkAll" Grid.Column="0" Content="전체선택" VerticalAlignment="Center" Margin="1" Style="{DynamicResource chkInNoViewBox}" Visibility="Hidden"/>
                    <TextBlock x:Name="tbkIndexCount" Grid.Column="0" Text="▶ 검색결과 : " VerticalAlignment="Center" Margin="1"/>
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext" />

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="7.3*" />
                </Grid.RowDefinitions>
                <Grid x:Name="grdInput1" Grid.Row="0" Grid.Column="0" IsHitTestVisible="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.25*" />
                        <ColumnDefinition Width="1.7*" />
                        <ColumnDefinition Width=".1*" />
                        <ColumnDefinition Width="1.25*" />
                        <ColumnDefinition Width="1.7*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        
                        <RowDefinition Height="0*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1.1*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>


                    <!-- 0 Row-->
                    <Label Grid.Column="0" Grid.Row="0" Content="코   드" Margin="1"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <TextBox x:Name="txtCode" Grid.Column="1" Grid.Row="0" Margin="1" Background="#c2fdc3" 
                             IsReadOnly="True" Text="{Binding ArticleID}"/>

                    <!-- 주요관심품목, 사용안함 -->
                    <Grid Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="0.1*" />
                            <ColumnDefinition Width="0.8*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="1" Grid.Row="0" Margin="1" MouseLeftButtonUp="lblBuySaleMainYN_MouseLeftButtonUp">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="chkBuySaleMainYN" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="주요관심품목" />
                            </StackPanel>
                        </Label>

                        <Label Grid.Column="3" Grid.Row="0" Margin="1" MouseLeftButtonUp="lblchkNotUse_MouseLeftButtonUp">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox  x:Name="chkNotUse" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                <TextBlock Text="사용안함" />
                            </StackPanel>
                        </Label>


                    </Grid>

                    <!-- 1 Row-->
                    <Label Grid.Column="0" Grid.Row="1" Content="품   번" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <TextBox x:Name="txtBuyerArticleNo" Grid.Column="1" Grid.Row="1" Margin="1" 
                             Text="{Binding BuyerArticleNo}" Grid.ColumnSpan="4" KeyDown="txtBuyerArticleNo_KeyDown" Background="#fff2d2"/>
                    
                    <!-- 2 Row -->
                    <!-- 2 Row -->
                    <Label Grid.Column="0" Grid.Row="2" Content="품   명" Margin="1"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <TextBox x:Name="txtName" Grid.Column="1" Grid.Row="2" Margin="1" 
                        Text="{Binding Article}" KeyDown="txtName_KeyDown"/>       

                    <Label Grid.Column="3" Grid.Row="2" Content="난이도" Margin="1" Visibility="Hidden"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <TextBox x:Name="TextProdDiffiLevel" Grid.Column="4" Grid.Row="2" Margin="1" Visibility="Hidden"
                             Text="{Binding ProdDiffiLevel }" TextAlignment="Right" KeyDown="TextProdDiffiLevel_KeyDown" PreviewTextInput="TextProdDiffiLevel_PreviewTextInput"/>

                    <!-- 3-4 Row-->
                    <Label Grid.Column="0" Grid.Row="3" Content="세부내역(규격)" Margin="1" 
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <TextBox x:Name="txtSpec" Grid.Column="1" Grid.Row="3" Margin="1" Grid.ColumnSpan="4" Grid.RowSpan="2"
                             AcceptsReturn="True" Text="{Binding Spec}" KeyDown="txtSpec_KeyDown"/>

                    <!-- 5 Row-->
                    <Label Grid.Column="0" Grid.Row="5" Content="품명그룹" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <ComboBox x:Name="cboArticleGrp" Grid.Column="1" Grid.Row="5" Margin="1" Background="#fff2d2"
                              SelectedValue="{Binding ArticleGrpID}" DisplayMemberPath="code_name" 
                              SelectedValuePath="code_id" 
                              SelectionChanged="cboArticleGrp_SelectionChanged"/>

                    <Label Grid.Column="3" Grid.Row="5" Content="제품군" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Visible"/>
                    <ComboBox x:Name="cboProductGrpID" Grid.Row="5" Grid.Column="4" Margin="1" Background="#fff2d2"
                              SelectedValue="{Binding ProductGrpID}" DropDownClosed="cboProductGrpID_DropDownClosed" Visibility="Visible"/>



                    <!-- 6 Row -->
                    <Label Grid.Column="0" Grid.Row="12" Content="공급유형" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <ComboBox x:Name="cboSupplyType" Grid.Column="1" Grid.Row="12" Margin="1" Background="#fff2d2"
                              SelectedValue="{Binding SupplyType}" DropDownClosed="cboSupplyType_DropDownClosed"/>

                    <Label Grid.Column="3" Grid.Row="7" Content="부품분류" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Visible"/>
                    <ComboBox x:Name="cboPartGBNID" Grid.Row="7" Grid.Column="4" Margin="1" Background="#fff2d2"
                              SelectedValue="{Binding PartGBNID}" DropDownClosed="cboPartGBNID_DropDownClosed" Visibility="Visible"/>

                    <!-- 7 Row -->
                    <Label Grid.Column="0" Grid.Row="7" Content="단  위" Margin="1" 
                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <ComboBox x:Name="cboUnitClss" Grid.Column="1" Grid.Row="7" Margin="1" Background="#fff2d2"
                                  SelectedValue="{Binding UnitClss}" DropDownClosed="cboUnitClss_DropDownClosed"/>

                    <Label Grid.Column="3" Grid.Row="8" Content="라벨관리" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <ComboBox x:Name="cboLabelPrintYN" Grid.Column="4" Grid.Row="8" Margin="1" Background="#fff2d2"
                              SelectedValue="{Binding LabelPrintYN}" DropDownClosed="cboLabelPrintYN_DropDownClosed"/>

                    <!-- 8 Row -->
                    <Label Grid.Column="0" Grid.Row="8" Content="적정재고량" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

                    <Grid Grid.Column="1" Grid.Row="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.7*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtNeedStockQty" Grid.Column="0" Grid.ColumnSpan="2" Margin="1" Background="#fff2d2"
                             Text="{Binding NeedStockQty}" TextAlignment="Right" Padding="0 0 3 0" KeyDown="txtNeedStockQty_KeyDown" PreviewTextInput="txtNeedStockQty_PreviewTextInput"/>
                        <!--<Button x:Name="btnCalNeedStockQty" Grid.Column="1" Content="계산" Margin="1" Visibility="Visible"
                            Click="btnCalNeedStockQty_Click"/>-->
                    </Grid>

                    <Label Grid.Column="3" Grid.Row="9" Content="FTA중점관리품" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <ComboBox x:Name="cboFTAMgrYN" Grid.Column="4" Grid.Row="9" Margin="1" Background="#fff2d2"
                              SelectedValue="{Binding FTAMgrYN}" DropDownClosed="cboFTAMgrYN_DropDownClosed"/>


                    <!-- 9 Row -->
                    <Label Grid.Column="0" Grid.Row="9" Content="출하용박스 수량" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <TextBox x:Name="TextBoxOutQtyPerBox" Grid.Column="1" Grid.Row="9" Margin="1" 
                             Text="{Binding OutQtyPerBox}" TextAlignment="Right" Padding="0 0 3 0" KeyDown="TextBoxOutQtyPerBox_KeyDown" PreviewTextInput="TextBoxOutQtyPerBox_PreviewTextInput"/>

                    <Label Grid.Column="3" Grid.Row="10" Margin="1" Content="원재료속성" 
                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <ComboBox x:Name="cboPART_ATTR" Grid.Column="4" Grid.Row="10" Margin="1" Background="White"
                                  SelectedValue="{Binding PART_ATTR}" DropDownClosed="cboPART_ATTR_DropDownClosed"/>

                    <!-- 10 Row -->
                    <Label Grid.Column="0" Grid.Row="10" Content="생산박스당 수량" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <TextBox x:Name="TextBoxProdQtyPerBox" Grid.Column="1" Grid.Row="10" Margin="1" 
                             Text="{Binding ProdQtyPerBox}" TextAlignment="Right" Padding="0 0 3 0" KeyDown="TextBoxProdQtyPerBox_KeyDown" PreviewTextInput="TextBoxProdQtyPerBox_PreviewTextInput"/>


                    <!-- 10 Row -->
                    <Label Grid.Column="3" Grid.Row="11" Content="출고/가공 단가" Margin="1" 
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Grid Grid.Row="11" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.8*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtOutUnitPrice" Grid.Column="0" Margin="1" Text="{Binding OutUnitPrice}" 
                                 TextAlignment="Right" Padding="0 0 3 0" KeyDown="txtOutUnitPrice_KeyDown" PreviewTextInput="txtOutUnitPrice_PreviewTextInput"/>
                        <ComboBox x:Name="cboPriceClss" Grid.Column="1" Margin="1" Background="White"
                              SelectedValue="{Binding UnitPriceClss}" DropDownClosed="cboPriceClss_DropDownClosed"/>
                    </Grid>

                    <!--<Label Grid.Column="3" Grid.Row="10" Content="내   경" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <TextBox x:Name="txtInDiameter" Grid.Column="4" Grid.Row="10" Margin="1" 
                             Text="{Binding InDiameter}" TextAlignment="Right" Padding="0 0 3 0" />-->
                    <!-- 11 Row -->
                    <Label Grid.Column="0" Grid.Row="11" Content="매입 단가" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                    <Grid Grid.Row="11" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.8*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtUnitPrice" Grid.Column="0" Margin="1" 
                             Text="{Binding UnitPrice}" TextAlignment="Right" Padding="0 0 3 0" KeyDown="txtUnitPrice_KeyDown" PreviewTextInput="txtUnitPrice_PreviewTextInput"/>
                        <ComboBox x:Name="cboPriceClss2" Grid.Column="1" Margin="1" Background="White"
                              SelectedValue="{Binding UnitPriceClss}" DropDownClosed="cboPriceClss2_DropDownClosed"/>
                    </Grid>


                    <GroupBox Grid.Row="13" Grid.ColumnSpan="5" Grid.RowSpan="2" Header="제품스펙" FontSize="12">
                        <Grid x:Name="Spec" Margin="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
 
                            <!--10 Row--> <!--외경으로 되어있구나-->
                            <Label Grid.Column="2" Grid.Row="0" Content="폭" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                            <TextBox x:Name="txtExdiameter" Grid.Column="3" Grid.Row="0" Margin="1" Text="{Binding Exdiameter}"
                                     TextAlignment="Right" Padding="0 0 3 0" PreviewTextInput="txtExdiameter_PreviewTextInput" />

                            <!-- 12 Row -->
                            <Label Grid.Column="0" Grid.Row="0" Content="중   량" Margin="1"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.8*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtWeight" Grid.Column="0" Grid.Row="0" Margin="1" Text="{Binding Weight}"
                                         TextAlignment="Right" Padding="0 0 3 0" PreviewTextInput="txtWeight_PreviewTextInput" />
                                <Label Grid.Column="1" Grid.Row="0" Content="Kg" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
