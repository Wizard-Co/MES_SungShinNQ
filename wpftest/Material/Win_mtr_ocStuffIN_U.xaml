<UserControl x:Class="WizMes_SungShinNQ.Win_mtr_ocStuffIN_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_SungShinNQ"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource WizMes_SungShinNQ}" Margin="2" x:Name="Header">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="160*"/>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="150*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblDateSrh" Grid.Column="0" Margin="1"
                       MouseLeftButtonUp="lblDateSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkDateSrh" VerticalAlignment="Center"
                                      Checked="chkDateSrh_Checked" Unchecked="chkDateSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text=" 입고 일자" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <DatePicker x:Name="dtpSDateSrh" Grid.Column="1" Margin="1" VerticalContentAlignment="Center"
                            IsEnabled="False"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="dtpEDateSrh" Grid.Column="1" Grid.Row="1" Margin="1" 
                            VerticalContentAlignment="Center" IsEnabled="False"/>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1" Margin="1 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnLastMonth" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전월" Margin="1" Click="btnLastMonth_Click"/>
                <Button x:Name="btnThisMonth" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금월" Margin="1" Click="btnThisMonth_Click" />
                <Button x:Name="btnYesterDay" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전일" Margin="1" Click="btnYesterDay_Click"/>
                <Button x:Name="btnToday" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금일" Margin="1" Click="btnToday_Click"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticleGrpSrh" Grid.Column="0" Margin="1"
                       MouseLeftButtonUp="LblArticleGrpSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkArticleGrpSrh" VerticalAlignment="Center"
                                      Checked="chkArticleGrpSrh_Checked" Unchecked="chkArticleGrpSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text=" 품명그룹" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboArticleGrpSrh" Grid.Column="1" Margin="1" IsEnabled="False" Background="White"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblArticleSrh" Grid.Column="0" Margin="1" 
                       MouseLeftButtonUp="lblArticleSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkArticleSrh" VerticalAlignment="Center"
                                      Checked="chkArticleSrh_Checked" Unchecked="chkArticleSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text=" 품     번" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtArticleSrh" Grid.Column="1" Margin="1" IsEnabled="False" 
                         Keyboard.KeyDown="txtArticleSrh_KeyDown"/>
                <Button x:Name="btnPfArticleSrh" Grid.Column="2" IsEnabled="False" Margin="1" 
                        Click="btnPfArticleSrh_Click" Visibility="Visible">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblCustomSrh" Grid.Column="0" Margin="1" 
                       MouseLeftButtonUp="lblCustomSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkCustomSrh" VerticalAlignment="Center"
                                      Checked="chkCustomSrh_Checked" Unchecked="chkCustomSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text=" 거 래 처" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <TextBox x:Name="txtCustomSrh" Grid.Column="1" Margin="1" IsEnabled="False" 
                         Keyboard.KeyDown="txtCustomSrh_KeyDown"/>
                <Button x:Name="btnPfCustomSrh" Grid.Column="2" Margin="1" IsEnabled="False" 
                        Click="btnPfCustomSrh_Click">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lblStuffClssSrh" Grid.Column="0" Margin="1" 
                       MouseLeftButtonUp="lblStuffClssSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chkStuffClssSrh" VerticalAlignment="Center"
                                      Checked="chkStuffClssSrh_Checked" Unchecked="chkStuffClssSrh_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text=" 입고구분" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <ComboBox x:Name="cboStuffClssSrh" Grid.Column="1" Margin="1" IsEnabled="False" Background="White"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*"/>
                    <ColumnDefinition Width="65*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblsInspectApprovalYN" Grid.Column="0" Margin="1" 
                       MouseLeftButtonUp="lblsInspectApprovalYN_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal" Margin="5 0 0 0">
                        <Viewbox VerticalAlignment="Center">
                            <CheckBox x:Name="chksInspectApprovalYN" VerticalAlignment="Center"
                                      Checked="chksInspectApprovalYN_Checked" Unchecked="chksInspectApprovalYN_Unchecked"/>
                        </Viewbox>
                        <TextBlock Text=" 입고검수승인" VerticalAlignment="Center" />
                    </StackPanel>
                </Label>
                <ComboBox x:Name="cbosInspectApprovalYN" Grid.Column="1" Margin="1" Background="White" IsEnabled="False"/>
            </Grid>

            <!--스크랩 처리 : 좌우 공백을 위해 열 나눔-->
            <Grid Grid.Row="0" Grid.Column="3" Grid.RowSpan="4" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <GroupBox Margin="1" Grid.Column="1">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="chkScrap" VerticalAlignment="Center" Content="스크랩처리"
                                  Checked="chkScrap_Checked" Unchecked="chkScrap_Unchecked"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1.8*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65*" />
                                <ColumnDefinition Width="105*" />
                            </Grid.ColumnDefinitions>
                            <Label Content="LOT ID" HorizontalContentAlignment="Center" Margin="1"/>
                            <TextBox Grid.Column="1" x:Name="txtScrapLotID" Margin="1" />
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnScrap" Grid.Column="0" Margin="1 10 10 1" Background="#ffc0c0" Visibility="Hidden"
                                Click="btnScrap_Click" ToolTip="스크랩처리 완료시 '사용불가 Lot검색' 동작 수행">
                                <StackPanel Margin="4">
                                    <TextBlock Text="잔량스크랩처리"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnScrapSearch" Grid.Column="1" Margin="1" Click="btnScrapSearch_Click"
                                ToolTip="왼쪽의 LotID만을 이용해 검색합니다(다른 조회 조건 무시)">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="사용불가" />
                                    <TextBlock Text="Lot검색" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="5" Grid.RowSpan="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnTest" Grid.Row="0" Grid.Column="0" Margin="1" Click="btnTest_Click" Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiRefresh}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="테스트" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnSearch" Grid.Row="0" Grid.Column="0" Margin="1" Click="btnSearch_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnClose" Grid.Row="0" Grid.Column="2" Margin="1" Click="btnClose_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnLotPrint" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="1" Click="Button_Click" Tag="1">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiPrint}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="Lot라벨프린터" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.ContextMenu>
                        <ContextMenu x:Name="menu">
                            <MenuItem x:Name="menuSeeAhead" Header="미리보기" Click="menuLabelSeeAhead_Click" ></MenuItem>
                            <MenuItem x:Name="menuRightPrint" Header="바로인쇄" Click="menuLabelRightPrint_Click" ></MenuItem>
                            <MenuItem x:Name="menuClose" Header="닫   기" Click="menuLabelClose_Click" ></MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button x:Name="btnPrint" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="1" Click="btnPrint_Click" Tag="2">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiPrint}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="거래명세서" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="미리보기" Click="menuSeeAhead_Click" ></MenuItem>
                            <MenuItem Header="바로인쇄" Click="menuRightPrint_Click" ></MenuItem>
                            <MenuItem Header="닫   기" Click="menuClose_Click" ></MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button x:Name="btnExcel" Grid.Row="0" Grid.Column="1" Margin="1" Click="btnExcel_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
            <Label x:Name="lblRemainAddSrh" Grid.Column="4" Grid.Row="3"  VerticalContentAlignment="Center"
                MouseLeftButtonUp="lblRemainAddSrh_MouseLeftButtonUp" Visibility="Visible">
                <StackPanel Orientation="Horizontal" Margin="-2">
                    <Viewbox>
                        <CheckBox x:Name="chkRemainAddSrh"/>
                    </Viewbox>
                    <TextBlock Text="유지추가"/>
                </StackPanel>
            </Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="18*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="19*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="8 0 0 0">
                        <CheckBox x:Name="AllCheck" VerticalAlignment="Center" Content="전체선택"
                                  VerticalContentAlignment="Center" Checked="AllCheck_Checked"
                                  Unchecked="AllCheck_Unchecked"/>
                    </StackPanel>
                    <DataGrid x:Name="dgdMain" Grid.Row="1" Style="{DynamicResource DataGridSet1}" SelectionChanged="dgdMain_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="  " SortMemberPath="Num">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Num}" TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="C" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox Click="chkReq_Click">
                                            <CheckBox.Style>
                                                <Style TargetType="CheckBox">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="true">
                                                            <Setter Property="IsChecked" Value="True"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Chk,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="false">
                                                            <Setter Property="IsChecked" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </CheckBox.Style>
                                        </CheckBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="발주번호" Binding="{Binding Req_ID}"/>
                            <DataGridTextColumn Header="발주비고" Binding="{Binding ReqName}"/>
                            <DataGridTextColumn Header="입고일자" Binding="{Binding StuffDate_CV}"/>
                            <DataGridTextColumn Header="거래처" Binding="{Binding CustomName}"/>
                            <DataGridTextColumn Header="품번" Binding="{Binding BuyerArticleNo}"/>
                            <DataGridTextColumn Header="품명" Binding="{Binding Article}"/>
                            <DataGridTextColumn Header="입고구분" Binding="{Binding StuffClssName}"/>
                            <DataGridTextColumn Header="입고후창고" Binding="{Binding ToLocName}"/>
                            <DataGridTextColumn Header="입고처명" Binding="{Binding Custom}"/>
                            <DataGridTextColumn Header="입고수량" Binding="{Binding StuffQty,StringFormat=N0}" 
                                                CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTemplateColumn Header="입고단위" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding UnitClssName}" TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="화폐단위">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PriceClssName}" TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="부가세">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Vat_Ind_YN}" TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--<DataGridTextColumn Header="환율" Binding="{Binding ExchRate}"/>-->
                            <DataGridTemplateColumn Header="비고">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Remark}" Padding="5 0 "/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="LotID" Binding="{Binding Lotid}"/>
                            <DataGridTextColumn Header="입고번호" Binding="{Binding StuffInID}"/>
                            <DataGridTextColumn Header="Spec" Binding="{Binding Spec}"/>
                            <DataGridTextColumn Header="검수자" Binding="{Binding CustomInspector}"/>
                            <DataGridTemplateColumn Header="단위ID" Visibility="Hidden">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding UnitClss}" TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--<DataGridTextColumn Header="박스당장입량" Binding="{Binding QtyPerBox,StringFormat=N0}"
                                                CellStyle="{StaticResource NumericDataGridCell}"/>-->
                            <DataGridTextColumn Header="입고검수자" Binding="{Binding Inspector}"/>
                            <DataGridTextColumn Header="금액" Binding="{Binding Amount,StringFormat=N0}"
                                                CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="잔량" Binding="{Binding ScrapQty,StringFormat=N0}"
                                                CellStyle="{StaticResource NumericDataGridCell}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <GroupBox Grid.Row="1">
                    <DataGrid x:Name="dgdTotal" Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn />
                            <DataGridTemplateColumn Header="입고량" Width="*"
                                                CellStyle="{StaticResource NumericDataGridCell}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SumStuffInQty, StringFormat=N0}" TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="입고건수" Width="*"
                                                CellStyle="{StaticResource NumericDataGridCell}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SumStuffInCount,StringFormat={}{0} 건}" TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
            <GridSplitter Width="5" Grid.Column="1" ResizeBehavior="PreviousAndNext"/>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="12.5*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="2.3*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="0.7*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Grid.Row="1">
                        <Label x:Name="lblMsg" Grid.Row="1" Margin="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                               Background="Yellow" Foreground="Red" Visibility="Hidden">
                            <TextBlock x:Name="tbkMsg" Text="자료 입력 중" Margin="2" />
                        </Label>
                    </Grid>
                    <Button x:Name="btnSave" Grid.Column="2" Margin="2" Visibility="Hidden"
                            Click="btnSave_Click" Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnCancel" Grid.Column="3" Margin="2" Visibility="Hidden"
                            Click="btnCancel_Click" Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnAdd" Grid.Column="4" Margin="2" Click="btnAdd_Click" Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiInsert}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblInsert},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnUpdate" Grid.Column="5" Margin="2" Click="btnUpdate_Click" Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnDelete" Grid.Column="6" Margin="2" Click="btnDelete_Click" Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{DynamicResource btiDelete}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Source={StaticResource tblDelete},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <GroupBox x:Name="gbxInput" Grid.Row="1" IsHitTestVisible="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90*"/>
                            <ColumnDefinition Width="90*"/>
                            <ColumnDefinition Width="20*"/>
                            <ColumnDefinition Width="20*"/>
                            <ColumnDefinition Width="20*"/>
                            <ColumnDefinition Width="70*"/>
                            <ColumnDefinition Width="90*"/>
                            <!--<ColumnDefinition Width="20*"/>-->
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
